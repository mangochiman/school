<!DOCTYPE html>

<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>Payment Types</title>
    <!-- Optimize for mobile devices -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>

    <!-- jQuery & JS files -->

    <%= javascript_include_tag("jquery") %>
    <%= javascript_include_tag("jquery-1.9.1.min") %>
    <%= javascript_include_tag("jquery.confirm") %>
    <%= javascript_include_tag("script") %>
    <%= javascript_include_tag("gvalidator") %>
    <%= stylesheet_link_tag("style") %>
    <%= stylesheet_link_tag("metallic") %>
    <%= stylesheet_link_tag("gvalidator") %>
    <%= stylesheet_link_tag("bootstrap") %>

    <script>
      function selectAll(){
        selectAllInput = document.getElementById('table-select-all');
        inputs = document.getElementsByTagName("input");
        if (selectAllInput.checked){
          for (var i=0; i<=inputs.length - 1; i++){
            if (inputs[i] == selectAllInput) continue;
            if (inputs[i].type == 'checkbox'){
              inputs[i].checked = true;
            }
          }
        }
        else{
          for (var i=0; i<=inputs.length - 1; i++){
            if (inputs[i] == selectAllInput) continue;
            if (inputs[i].type == 'checkbox'){
              inputs[i].checked = false;
            }
          }
        }
      }

      function deletePaymentTypes(){
        inputs = document.getElementsByTagName("input");
        paymentTypeIDs = []
        for (var i=0; i<=inputs.length - 1; i++){
          if (inputs[i].type == 'checkbox'){
            if (inputs[i].checked){
              if (inputs[i].hasAttribute("payment_type_id")){
                paymentTypeID = inputs[i].getAttribute("payment_type_id");
                paymentTypeIDs.push(paymentTypeID);
              }
            }
          }
        }

        jQuery.ajax({
          type: "POST",
          url: "/payment_types/delete_payment_types",
          data: "payment_type_ids=" + paymentTypeIDs,
          success: function(){
            for (var x=0; x<= paymentTypeIDs.length - 1; x++){
              id = paymentTypeIDs[x];
              element = document.getElementById(id);
              element.parentNode.removeChild(element)
            }
          }

        });
      }
      var currentPaymentTypeId = "";
      function setCurrentPaymentTypeId(obj){
        currentPaymentTypeId = obj.getAttribute("payment_type_id");
      }

      function deleteSingleEntry(){
        jQuery.ajax({
          type: "POST",
          url: "/payment_types/delete_payment_types",
          data: "payment_type_id=" + currentPaymentTypeId + "&mode=single_entry",
          success: function(){
            element = document.getElementById(currentPaymentTypeId);
            element.parentNode.removeChild(element);
          }
        });
      }
    </script>

    <style>
      .modal-title {
        font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
        font-weight: 500;
        line-height: 1.1;
        font-size: 1.2em;
        color: red;
      }

      form.autoform .msg.icon {
        margin: 0 10px;
        padding: 5px 5px 5px 30px;
        position: unset;
      }

      form label {
        font-size: 0.9em;
        font-weight: bold;
      }
      form.autoform input, select{
        font-size: 0.8em !important;
        font-weight: bold;
      }
      #add_position input[type="text"], input[type="password"], textarea {
        border: 1px solid #d9dbdd;
        outline: medium none;
        padding: 0.5em 0.225em;
      }

      #simple-input {
        font-size: 10pt !important;
      }

      table th:first-child {
        border-style: none none none !important;
      }

      a{
        cursor: pointer;
      }
    </style>

  </head>
  <body>   
    <!-- HEADER -->
    <div id="header-with-tabs">

      <div class="page-full-width cf">

        <ul id="tabs" class="fl">
          <li><a href="/payments/payments_management_dashboard" class="dashboard-tab">Dashboard</a></li>
          <li><a href="/payments/payments_management_menu" class="active-tab">Payments</a></li>
        </ul> <!-- end tabs -->

        <!-- Change this image to your own company's logo -->
        <!-- The logo will automatically be resized to 30px height. -->
        <a href="#" id="company-branding-small" class="fr"><%= image_tag("/admin/school_logo", :alt => 'Logo Missing')%></a>

      </div> <!-- end full-width -->

    </div> <!-- end header -->



    <!-- MAIN CONTENT -->
    <div id="content">

      <div class="page-full-width cf">

        <div class="side-menu fl">

          <h3>Task</h3>
          <ul>
            <li><a href="/payment_types/add_payment_type">Add Payment Type</a></li>
            <li><a href="/payment_types/edit_payment_type">Edit Payment Type</a></li>
            <li><a href="/payment_types/void_payment_types">Void Payment Types</a></li>
            <li><a href="/payment_types/view_payment_types">View Payment Types</a></li>
          </ul>

        </div> <!-- end side-menu -->

        <div class="side-content fr">

          <div class="content-module">

            <div class="content-module-heading cf">

              <h3 class="fl">Void Payment Types</h3>
              <span class="fr expand-collapse-text">Click to collapse</span>
              <span class="fr expand-collapse-text initial-expand">Click to expand</span>

            </div> <!-- end content-module-heading -->


            <div class="content-module-main">
              <% if flash[:notice] %>
                <div class="confirmation-box round">
                  <%= flash[:notice] %>
                </div>
              <% end %>
              <% if flash[:error] %>
                <div class="error-box round">
                  <%= flash[:error] %>
                </div>
              <% end %>

              <table>
                <thead>
                  <tr>
                    <th><input type="checkbox" id="table-select-all" onclick="selectAll();"/></th>
                    <th style="min-width:35%;">Payment Type</th>
                    <th style="">Amount Set</th>
                    <th style=""><center>Date created</center></th>
                    <th>Action</th>
                  </tr>
                </thead>
                <tfoot>
                  <tr>
                    <td colspan="5" class="table-footer">
                      <a href="#" class="button round blue image-right ic-delete text-upper delete-multiple">Delete</a>
                    </td>
                  </tr>
                </tfoot>
                <tbody id="payment_types">
                  <% @payment_types.each do |payment_type| %>
                    <tr id="<%= payment_type.id %>">
                      <td><input type="checkbox" payment_type_id="<%= payment_type.id %>"/></td>
                      <td style="text-align:left; padding: 0.833em 0 0.833em 1.25em;"><a href="#"><%=  payment_type.name %></a></td>
                      <td><%= number_to_currency(payment_type.amount_required, :unit => 'MK') %></td>
                      <td><center><%= payment_type.created_at.to_date.strftime("%d-%b-%Y") %></center></td>
                      <td>
                        <a payment_type_id="<%= payment_type.id %>" href="#" onmousedown="setCurrentPaymentTypeId(this)" class="table-actions-button ic-table-delete confirm"></a>
                      </td>
                    </tr>
                  <% end %>
                </tbody>

              </table>
            </div> <!-- end content-module-main -->

          </div> <!-- end content-module -->

          <!-- end content-module -->

        </div> <!-- end side-content -->

      </div> <!-- end full-width -->

    </div> <!-- end content -->

    <%= javascript_include_tag("bootstrap") %>
    <script>
      $(".delete-multiple").confirm({
        title:"Delete confirmation",
        text:"This is very dangerous, you shouldn't do it! Are you really really sure?",
        confirm: function(button) {
          deletePaymentTypes();
        },
        cancel: function(button) {

        },
        confirmButton: "Yes I am",
        cancelButton: "No"
      });

      $(".confirm").confirm({
        title:"Delete confirmation",
        text:"This is very dangerous, you shouldn't do it! Are you really really sure?",
        confirm: function(button) {
          deleteSingleEntry();
        },
        cancel: function(button) {

        },
        confirmButton: "Yes I am",
        cancelButton: "No"
      });
    </script>
  </body>
</html>