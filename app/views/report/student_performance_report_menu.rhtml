<!DOCTYPE html>

<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>SimpleAdmin - Dashboard</title>
    <!-- Optimize for mobile devices -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>

    <!-- jQuery & JS files -->
    <%= javascript_include_tag("jquery-1.9.1.min") %>
    <%= javascript_include_tag("jquery.confirm") %>
    <%= javascript_include_tag("script") %>
    <%= javascript_include_tag("gvalidator") %>
    <%= stylesheet_link_tag("style") %>
    <%= stylesheet_link_tag("metallic") %>
    <%= stylesheet_link_tag("gvalidator") %>
    <%= stylesheet_link_tag("bootstrap") %>

    <script>
      var classRoomHash = eval('(' + '<%= @class_room_hash.to_json %>' + ')');
      requiredData = {'exam_type':'Exam Type', 'course':' Course', 'class_room':'Class Room', 'semester':'Semester', 'year':'Year'}

      function queryReportData(){
        missingFields = []
        for (var field in requiredData){
          value = document.getElementById(field).value;
          if (value == ''){
            missingFields.push('<b><i>' + requiredData[field] + '</i></b>');
          }
        }

        if (missingFields.length > 0){
          jQuery.confirm({
            title:"MISSING FIELDS",
            text:"Fill the following fields " + missingFields.join(", "),
            confirm: function(button) {

            },
            cancel: function(button) {

            },
            confirmButton: "Done"
          });
        }
        else{
          examType = document.getElementById('exam_type').value;
          course = document.getElementById('course').value;
          classRoomID = document.getElementById('class_room').value;
          semesterID = document.getElementById('semester').value;
          year = document.getElementById('year').value;

          jQuery.ajax({
            type: "POST",
            url: "/report/student_performance_report_menu",
            data: "class_room=" + classRoomID + "&semester=" + semesterID + "&year=" + year + '&course=' + course + '&exam_type=' + examType,
            success: function(results){
              html = "<table>";
              html += "<thead>";
              html += "<tr>";
              html += "<th style='min-width:30%;'>Name</th><th>Email</th><th>Gender</th><th>Exam Date</th><th>Grade</th>";
              html += "</tr>";
              html += "</thead>";
              results = eval('(' + results + ')');
              console.log(results)
              html += "<tbody>";

              if (jQuery.isEmptyObject(results)){
                html += "<tr style='font-size:1.2em; '>";
                html += "<td colspan='5'>No data in this report</td>";
                html += "</tr>";
              }

              for (var classRoom in results){

                if (!jQuery.isEmptyObject(results[classRoom])){
                  html += "<tr style='font-size:1.4em; background-color:#2069b4; color:white;'>";
                  html += "<td colspan='5'>" + classRoomHash[classRoom] + "</td>";
                  html += "</tr>";
                }

                for (var studentID in results[classRoom]){
                  html += "<tr>";
                  console.log(results[classRoom][studentID])
                  studentName = results[classRoom][studentID]["name"];
                  studentGender = results[classRoom][studentID]["gender"];
                  studentEmail = results[classRoom][studentID]["email"];
                  studentDOB = results[classRoom][studentID]["dob"];
                  exam_date = results[classRoom][studentID]["exam_date"];
                  grade = results[classRoom][studentID]["grade"];

                  html += "<td>" + studentName + "</td>";
                  html += "<td><a href='#'>" + studentEmail + "</a></td>";
                  html += "<td>" + studentGender + "</td>";
                  html += "<td>" + exam_date + "</td>";
                  html += "<td style='color: green; font-weight: bold;'>" + grade + "</td>";
                  html += "</tr>";
                }
              }

              html += "</tbody>";
              html += "</table>";
              reportData = document.getElementById('report_data');
              reportData.innerHTML = html;
            }

          })
        };
      }

    </script>

    <style>
      .modal-title {
        font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
        font-weight: 500;
        line-height: 1.1;
        font-size: 1.2em;
        color: #317eac;
      }

      #year, #semester, #class_room, #course, #exam_type{
        background-color: #fff;
        background-image: none;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-shadow: 0 1px 1px rgba(0, 0, 0, 0.075) inset;
        color: #555;
        display: block;
        font-size: 14px;
        height: 34px;
        line-height: 1.42857;
        padding: 6px 12px;
        min-width: 208px;
        transition: border-color 0.15s ease-in-out 0s, box-shadow 0.15s ease-in-out 0s;
      }

      a{
        cursor: pointer;
      }

      table th:first-child {
        border-style: none none none !important;
      }
    </style>

  </head>
  <body>
    <!-- HEADER -->
    <div id="header-with-tabs">

      <div class="page-full-width cf">

        <ul id="tabs" class="fl">
          <li><a href="/report/reports_generator_dashboard" class="dashboard-tab">Dashboard</a></li>
          <li><a href="/report/reports_generator_menu" class="active-tab">Reports</a></li>
        </ul> <!-- end tabs -->

        <!-- Change this image to your own company's logo -->
        <!-- The logo will automatically be resized to 30px height. -->
        <a href="#" id="company-branding-small" class="fr"><%= image_tag("/admin/school_logo", :alt => 'Logo Missing')%></a>

      </div> <!-- end full-width -->

    </div> <!-- end header -->



    <!-- MAIN CONTENT -->
    <div id="content">

      <div class="page-full-width cf">

        <div class="side-menu fl">

          <h3>Select Report</h3>
          <ul>
            <li><a href="/report/students_per_semester_report">Students per semester</a></li>
            <li><a href="/report/students_per_year_report">Students per year Report</a></li>
            <li><a href="/report/students_per_class_report">Students per class Report </a></li>
            <li><a href="/report/courses_report">Courses Report</a></li>
            <li><a href="/report/courses_per_class_report">Courses per class Report</a></li>
            <li><a href="/report/teachers_report">Teachers Report</a></li>
            <li><a href="/report/teachers_per_subjects_report">Teacher vs subjects Report</a></li>
            <li><a href="/report/results_per_class_report">Results per class Report</a></li>
            <li><a href="/report/subject_pass_rate_report">Subject pass rate report</a></li>
            <li><a href="/report/student_performance_report_menu">Student Performance report</a></li>
            <li><a href="/report/student_payments_report_menu">Student Payments Report</a></li>
            <!-- <li><a href="/report/employees_report">Employees Report</a></li> -->
          </ul>

        </div> <!-- end side-menu -->

        <div class="side-content fr">

          <div class="half-size-column fl" style="width:34%;">

            <div class="content-module">

              <div class="content-module-heading cf">

                <h3 class="fl">Students Performance Report</h3>
                <span class="fr expand-collapse-text">Click to collapse</span>
                <span class="fr expand-collapse-text initial-expand">Click to expand</span>

              </div> <!-- end content-module-heading -->


              <div class="content-module-main">

                <table>
                  <tr>
                    <td style="min-width:30%; text-align: left;"><span style="font-size:1.4em;">Exam Type</span></td>
                    <td><%= select_tag("exam_type", options_for_select(@exam_types), {:style => 'text-align:center'})%></td>
                  </tr>

                  <tr>
                    <td style="min-width:30%; text-align: left;"><span style="font-size:1.4em;">Course</span></td>
                    <td><%= select_tag("course", options_for_select(@courses), {:style => 'text-align:center'})%></td>
                  </tr>

                  <tr>
                    <td style="min-width:30%; text-align: left;"><span style="font-size:1.4em;">Year</span></td>
                    <td><%= select_tag("year", options_for_select(@years), {:style => 'text-align:center'})%></td>
                  </tr>

                  <tr>
                    <td style="min-width:30%; text-align: left;"><span style="font-size:1.4em;">Class</span></td>
                    <td><%= select_tag("class_room", options_for_select(@class_rooms), {:style => 'text-align:center'})%></td>
                  </tr>

                  <tr>
                    <td style="text-align: left;"><span style="font-size:1.4em;">Semester</span></td>
                    <td><%= select_tag("semester", options_for_select(@semesters), {:style => 'text-align:center'})%></td>
                  </tr>
                </table>
                <div class="stripe-separator"><!-- --></div>
                <span style="margin-left:41%; position: relative;">
                  <a onclick="queryReportData();" class="button round blue image-right ic-right-arrow text-upper">Apply</a>
                </span>

              </div> <!-- end content-module-main -->

            </div> <!-- end content-module -->

          </div> <!--end half-size-column-->

          <div class="half-size-column fr" style="width:65%;">

            <div class="content-module">

              <div class="content-module-heading cf">

                <h3 class="fl">Report</h3>
                <span class="fr expand-collapse-text">Click to collapse</span>
                <span class="fr expand-collapse-text initial-expand">Click to expand</span>

              </div> <!-- end content-module-heading -->

              <div class="content-module-main cf">
                <div id="report_data">
                </div>
              </div> <!-- end content-module-main -->

            </div> <!-- end content-module -->

          </div> <!--end half-size-column-->

        </div> <!-- end side-content -->

      </div> <!-- end full-width -->

    </div>

    <%= javascript_include_tag("bootstrap") %>
  </body>
</html>