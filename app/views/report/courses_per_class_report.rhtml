<!DOCTYPE html>

<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>SimpleAdmin - Dashboard</title>
    <!-- Optimize for mobile devices -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>

    <!-- jQuery & JS files -->
    <%= javascript_include_tag("jquery-1.9.1.min") %>
    <%= javascript_include_tag("script") %>
    <%= stylesheet_link_tag("style") %>

    <script>
      var classRoomHash = eval('(' + '<%= @class_room_hash.to_json %>' + ')');
      function queryReportData(){
        classRoomID = document.getElementById('class_room').value;
        semesterID = document.getElementById('semester').value;
        year = document.getElementById('year').value;

        jQuery.ajax({
          type: "POST",
          url: "/report/courses_per_class_report",
          data: "class_room=" + classRoomID + "&semester=" + semesterID + "&year=" + year,
          success: function(results){
            html = "<table>";
            html += "<thead>";
            html += "<tr>";
            html += "<th style='font-weight:bold;'>#</th><th style='text-align:center;'>Course Name</th><th style='min-width:30%;'>Date Created</th>";
            html += "</tr>";
            html += "</thead>";
            results = eval('(' + results + ')');
            console.log(results)
            html += "<tbody>";
            count = 0
            for (var year in results){
              if (!jQuery.isEmptyObject(results[year])){
                html += "<tr style='font-size:1.4em; background-color:#2069b4; color:white;'>";
                html += "<td colspan='4'>" + year + "</td>";
                html += "</tr>";
              }

              for (var classRoom in results[year]){
                classRoomId = parseInt(classRoom);
                html += "<tr style='font-size:1.2em; background-color:gray; color:white;'>";
                html += "<td colspan='4' style='text-align:left; font-weight:bold; padding-left:10%;'>" + classRoomHash[classRoomId] + "</td>";
                html += "</tr>";
                for (var courseID in results[year][classRoom]){
                  html += "<tr>";
                  count = count + 1
                  courseName = results[year][classRoom][courseID]["course_name"];
                  dateCreated = results[year][classRoom][courseID]["date_created"];

                  html += "<tr>";
                  html += "<td style='font-weight:bold;'>" + count + "</td>";
                  html += "<td style='padding-left:25%;'>" + courseName + "</td>";
                  html += "<td>" + dateCreated + "</td>";
                  html += "</tr>";
                }
              }
            }
            html += "</tbody>";
            html += "</table>";
            reportData = document.getElementById('report_data');
            reportData.innerHTML = html;
          }

        });
      }

    </script>

    <style>
      #year, #semester, #class_room{
        background-color: #fff;
        background-image: none;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-shadow: 0 1px 1px rgba(0, 0, 0, 0.075) inset;
        color: #555;
        display: block;
        font-size: 14px;
        height: 34px;
        line-height: 1.42857;
        padding: 6px 12px;
        min-width: 208px;
        transition: border-color 0.15s ease-in-out 0s, box-shadow 0.15s ease-in-out 0s;
      }

      a{
        cursor: pointer;
      }

      table th:first-child {
        border-style: none none none !important;
      }
    </style>
  </head>
  <body>

    <!-- TOP BAR -->
    <div id="top-bar">

      <div class="page-full-width cf">

        <ul id="nav" class="fl">

          <li class="v-sep"><a href="#" class="round button dark ic-left-arrow image-left">Go to website</a></li>
          <li class="v-sep"><a href="#" class="round button dark menu-user image-left">Logged in as <strong>admin</strong></a>
            <ul>
              <li><a href="#">My Profile</a></li>
              <li><a href="/admin/settings">Settings</a></li>
              <li><a href="#">Change Password</a></li>
              <li><a href="#">Log out</a></li>
            </ul>
          </li>

          <li><a href="#" class="round button dark menu-email-special image-left">3 new messages</a></li>
          <li><a href="#" class="round button dark menu-logoff image-left">Log out</a></li>

        </ul> <!-- end nav -->


        <form action="#" method="POST" id="search-form" class="fr">
          <fieldset>
            <input type="text" id="search-keyword" class="round button dark ic-search image-right" placeholder="Search..." />
            <input type="hidden" value="SUBMIT" />
          </fieldset>
        </form>

      </div> <!-- end full-width -->

    </div> <!-- end top-bar -->



    <!-- HEADER -->
    <div id="header-with-tabs">

      <div class="page-full-width cf">

        <ul id="tabs" class="fl">
          <li><a href="/admin/home" class="dashboard-tab">Dashboard</a></li>
          <li><a href="/student/index">Students</a></li>
          <li><a href="/parent/index">Parents</a></li>
          <li><a href="/teacher/index">Teachers</a></li>
          <li><a href="/admin/research">Research</a></li>
          <li><a href="/examination/index">Exams</a></li>
          <li><a href="/class_room/index">Classes</a></li>
          <li><a href="/course/index">Courses</a></li>
          <li><a href="/report/index" class="active-tab">Reports</a></li>
          <li><a href="/semesters/index">Semester</a></li>
          <li><a href="/attendance/index">Daily Attendance</a></li>
        </ul> <!-- end tabs -->

        <!-- Change this image to your own company's logo -->
        <!-- The logo will automatically be resized to 30px height. -->
        <a href="#" id="company-branding-small" class="fr"><img src="/images/company-logo.png" alt="Blue Hosting" /></a>

      </div> <!-- end full-width -->

    </div> <!-- end header -->



    <!-- MAIN CONTENT -->
    <div id="content">

      <div class="page-full-width cf">

        <div class="side-menu fl">

          <h3>Select Report</h3>
          <ul>
            <li><a href="/report/students_per_semester_report">Students per semester</a></li>
            <li><a href="/report/students_per_year_report">Students per year Report</a></li>
            <li><a href="/report/students_per_class_report">Students per class Report </a></li>
            <li><a href="/report/courses_report">Courses Report</a></li>
            <li><a href="/report/courses_per_class_report">Courses per class Report</a></li>
            <li><a href="/report/teachers_report">Teachers Report</a></li>
            <li><a href="/report/teachers_per_subjects_report">Teacher vs subjects Report</a></li>
            <li><a href="/report/results_per_class_report">Results per class Report</a></li>
            <li><a href="/report/subject_pass_rate_report">Subject pass rate report</a></li>
            <li><a href="/report/employees_report">Employees Report</a></li>
          </ul>

        </div> <!-- end side-menu -->

        <div class="side-content fr">

          <div class="half-size-column fl" style="width:34%;">

            <div class="content-module">

              <div class="content-module-heading cf">

                <h3 class="fl">Courses per class report</h3>
                <span class="fr expand-collapse-text">Click to collapse</span>
                <span class="fr expand-collapse-text initial-expand">Click to expand</span>

              </div> <!-- end content-module-heading -->


              <div class="content-module-main">

                <table>
                  <tr>
                    <td style="min-width:30%; text-align: left;"><span style="font-size:1.4em;">Class</span></td>
                    <td><%= select_tag("class_room", options_for_select(@class_rooms), {:style => 'text-align:center'})%></td>
                  </tr>
                  <tr>
                    <td style="min-width:30%; text-align: left;"><span style="font-size:1.4em;">Year</span></td>
                    <td><%= select_tag("year", options_for_select(@years), {:style => 'text-align:center'})%></td>
                  </tr>
                  <tr>
                    <td style="text-align: left;"><span style="font-size:1.4em;">Semester</span></td>
                    <td><%= select_tag("semester", options_for_select(@semesters), {:style => 'text-align:center'})%></td>
                  </tr>
                </table>
                <div class="stripe-separator"><!-- --></div>
                <span style="margin-left:41%; position: relative;">
                  <a onclick="queryReportData();" class="button round blue image-right ic-right-arrow text-upper">Apply</a>
                </span>

              </div> <!-- end content-module-main -->

            </div> <!-- end content-module -->

          </div> <!--end half-size-column-->

          <div class="half-size-column fr" style="width:65%;">

            <div class="content-module">

              <div class="content-module-heading cf">

                <h3 class="fl">Report</h3>
                <span class="fr expand-collapse-text">Click to collapse</span>
                <span class="fr expand-collapse-text initial-expand">Click to expand</span>

              </div> <!-- end content-module-heading -->


              <div class="content-module-main cf">
                <div id="report_data">
                </div>
              </div> <!-- end content-module-main -->

            </div> <!-- end content-module -->

          </div> <!--end half-size-column-->

        </div> <!-- end side-content -->

      </div> <!-- end full-width -->

    </div>



    <!-- FOOTER -->
    <div id="footer">

      <p>&copy; Copyright 2012 <a href="#">BlueHosting, LLC</a>. All rights reserved.</p>
      <p><strong>SimpleAdmin</strong> theme by <a href="http://www.adipurdila.com">Adi Purdila</a></p>

    </div> <!-- end footer -->

  </body>
</html>