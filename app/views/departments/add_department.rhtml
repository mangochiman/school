<!DOCTYPE html>

<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>Payments Management</title>
    <!-- Optimize for mobile devices -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>

    <!-- jQuery & JS files -->

    <%= javascript_include_tag("jquery") %>
    <%= javascript_include_tag("jquery-1.9.1.min") %>
    <%= javascript_include_tag("jquery.confirm") %>
    <%= javascript_include_tag("script") %>
    <%= javascript_include_tag("gvalidator") %>
    <%= stylesheet_link_tag("style") %>
    <%= stylesheet_link_tag("metallic") %>
    <%= stylesheet_link_tag("gvalidator") %>
    <%= stylesheet_link_tag("bootstrap") %>

    <script type="text/javascript">
      function selectFaculty(facultyID){
        options = document.getElementById('faculty_id').getElementsByTagName('option');
        for (var i=0; i<=options.length - 1; i++){
          if (parseInt(options[i].value) == parseInt(facultyID)){
            options[i].selected = true;
          }
        }

        document_type_div = document.getElementById('faculty_id_div');
        notifier = document_type_div.getElementsByTagName('span')[1];
        notifier.className = 'msg icon ok';
        notifier.innerHTML = 'Completed';
      }

<% if params[:faculty_id] %>
    window.setTimeout("selectFaculty('<%= params[:faculty_id] %>')", 150);
<% end %>
  
    </script>

    <style type="text/css">
      .modal-title {
        font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
        font-weight: 500;
        line-height: 1.1;
        font-size: 1.2em;
        color: red;
      }

      form.autoform .msg.icon {
        margin: 0 10px;
        padding: 5px 5px 5px 30px;
        position: unset;
        font-size: 8.99pt;
      }

      form label {
        font-size: 0.9em;
        font-weight: bold;
      }
      form.autoform input, select{
        font-size: 0.8em !important;
        font-weight: bold;
      }

      #departments input[type="text"]{
        border: 1px solid #d9dbdd;
        outline: medium none;
        width: 187px;
      }

      input[type="submit"] {
        margin-left: 31%;
      }

      #faculty_id{
        background-color: #fff;
        background-image: none;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-shadow: 0 1px 1px rgba(0, 0, 0, 0.075) inset;
        color: #555;
        font-size: 14px;
        text-align: center;
        height: 34px;
        line-height: 1.42857;
        margin-left: 0;
        width: 199px;
        padding: 6px 12px;
        transition: border-color 0.15s ease-in-out 0s, box-shadow 0.15s ease-in-out 0s;
      }

      table th:first-child {
        border-style: none none none !important;
      }

      a{
        cursor: pointer;
      }
    </style>
  </head>
  <body>    
    <!-- HEADER -->
    <div id="header-with-tabs">

      <div class="page-full-width cf">

        <ul id="tabs" class="fl">
          <li><a href="/departments/department_management_menu" class="active-tab">Departments</a></li>
        </ul> <!-- end tabs -->

        <!-- Change this image to your own company's logo -->
        <!-- The logo will automatically be resized to 30px height. -->
        <a href="#" id="company-branding-small" class="fr"><%= image_tag("/admin/school_logo", :alt => 'Logo Missing')%></a>

      </div> <!-- end full-width -->

    </div> <!-- end header -->



    <!-- MAIN CONTENT -->
    <div id="content">

      <div class="page-full-width cf">

        <div class="side-menu fl">

          <h3>Task</h3>
          <ul>
            <li><a href="/departments/add_department">Add Department</a></li>
            <li><a href="/departments/edit_department">Edit Department</a></li>
            <li><a href="/departments/void_departments">Void Departments</a></li>
            <li><a href="/departments/view_department">View Departments</a></li>
            <li><a href="/faculties/faculties_menu">Faculties</a></li>
          </ul>

        </div> <!-- end side-menu -->

        <div class="side-content fr">

          <div class="content-module">

            <div class="half-size-column fl" style="width:67%;">

              <div class="content-module">

                <div class="content-module-heading cf">

                  <h3 class="fl">New Department</h3>
                  <span class="fr expand-collapse-text">Click to collapse</span>
                  <span class="fr expand-collapse-text initial-expand">Click to expand</span>

                </div> <!-- end content-module-heading -->


                <div class="content-module-main">
                  <% if flash[:notice] %>
                    <div class="confirmation-box round">
                      <%= flash[:notice] %>
                    </div>
                  <% end %>
                  <% if flash[:error] %>
                    <div class="error-box round">
                      <%= flash[:error] %>
                    </div>
                  <% end %>
                  <form id="departments" class="autoform" action="/departments/create_department" method="POST">

                    <div id="faculty_id_div">
                      <label for="faculty_id" style="width:101px;">Faculty</label>
                      <%= select_tag("faculty_id", options_for_select(@faculties), {:class => "select required"}) %>
                    </div>

                    <div>
                      <label for="department_name" style="width:101px;">Department Name</label><input type="text" name="department_name" id="department_name" class="text required"/>
                    </div>

                    <div>
                      <label for="department_code" style="width:101px;">Department Code</label><input type="text" name="department_code" id="department_code" class="text required"/>
                    </div>
                    <div class="stripe-separator"><!--  --></div>
                    <input type="submit" value="Submit" class="round blue ic-right-arrow" />
                  </form>
                </div> <!-- end content-module-main -->

              </div> <!-- end content-module -->

            </div>
            <div class="half-size-column fr" style="width:32%">

              <div class="content-module">

                <div class="content-module-heading cf">

                  <h3 class="fl">Available Departments (<%= @departments.count %>)</h3>
                  <span class="fr expand-collapse-text">Click to collapse</span>
                  <span class="fr expand-collapse-text initial-expand">Click to expand</span>

                </div> <!-- end content-module-heading -->


                <div class="content-module-main cf">
                  <% unless @departments.blank? %>
                    <table>
                      <thead>
                        <tr>
                          <th>#</th>
                          <th>Department Name</th>
                          <th>Code</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% count = 0 %>
                        <% (@departments || []).each do |department| %>
                          <tr>
                            <td><%= count = count + 1 %></td>
                            <td style="padding:2px;"><a href="#" onclick="selectFaculty('<%= department.faculty.faculty_id %>')"><%= department.name %></a></td>
                            <td><%= department.code %></td>
                          </tr>
                        <% end %>
                      </tbody>
                    </table>
                  <% else %>
                    <div class="error-box round">
                      No Departments found
                    </div>
                  <% end %>
                </div> <!-- end content-module-main -->

              </div> <!-- end content-module -->

            </div>

          </div> <!-- end content-module -->




        </div> <!-- end side-content -->

      </div> <!-- end full-width -->

    </div> <!-- end content -->

    <%= javascript_include_tag("bootstrap") %>
    <%= javascript_include_tag("zebra_datepicker") %>
    <script>
      $('.date-picker').Zebra_DatePicker({
        view : 'years',
        direction: ['<%=  (Date.today - 10.years).strftime("%Y-%m-%d") %>', '<%=  Date.today.strftime("%Y-%m-%d") %>']
      });
    </script>
  </body>
</html>