    <!-- jQuery & JS files -->

    <%= javascript_include_tag("jquery") %>
    <%= javascript_include_tag("script") %>
    <%= javascript_include_tag("jquery-1.9.1.min") %>
    <%= javascript_include_tag("jquery.confirm") %>
    <%= stylesheet_link_tag("style") %>
    <%= stylesheet_link_tag("bootstrap") %>
    <script>
      function selectAll(){
        selectAllInput = document.getElementById('table-select-all');
        if (selectAllInput.checked){
          selectAllInput.checked = true;
        }
        else {
          selectAllInput.checked = false
        }
        inputs = document.getElementsByTagName("input");
        for (var i=0; i<=inputs.length - 1; i++){
          if (inputs[i] == selectAllInput) continue;
          if (inputs[i].type == 'checkbox'){
            if (inputs[i].checked){
              inputs[i].checked = false;
            }
            else{
              inputs[i].checked = true;
            }
          }
        }
      }
      
      function assignSubjects(obj){
        classRoomId = obj.getAttribute("class_room_id");
        window.location = "/class_room/assign_me_subjects?class_room_id=" + classRoomId;
      }
        
    </script>
    <style>
      table{
        margin-left:15%;
        width: 60%;
      }
      table td #simple-input{
        float: right;
      }

      table label{
        text-align: left;
      }
      #simple-input{
        font-size: 10pt !important;
      }

      #registration input[type="text"], input[type="password"], textarea {
        border: 1px solid #d9dbdd;
        outline: medium none;
        padding: 0.5em 0.225em;
      }
      input[type="submit"] {
        margin-left: 37%;
      }
      table th:first-child {
        border-style: none none none !important;
    }

    .classes{
        position: relative;
        margin-left: 0%;
        width: 100%;
     }

    .classes th, tbody{
        text-align: center;
    }

    .modal-title {
        font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
        font-weight: 500;
        line-height: 1.1;
        font-size: 1.2em;
        color: #317eac;
    }
    
    </style>
