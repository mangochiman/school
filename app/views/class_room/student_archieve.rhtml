<!DOCTYPE html>

<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>SimpleAdmin - Dashboard</title>
    <!-- Optimize for mobile devices -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>

    <!-- jQuery & JS files -->

    <%= javascript_include_tag("jquery") %>
    <%= javascript_include_tag("script") %>
    <%= javascript_include_tag("jquery-1.9.1.min") %>
    <%= javascript_include_tag("jquery.confirm") %>
    <%= stylesheet_link_tag("style") %>
    <%= stylesheet_link_tag("bootstrap") %>

    <script type="text/javascript">
      var classRoomId = "<%=params[:class_room_id]%>";
      function studentsArchivePath(){
        url="/class_room/view_class_archived_students?class_room_id=" + classRoomId;
        window.location = url;
      }
      
      function loadSearchResults(){
        names = document.getElementById('name_search').value.split(/\W+/);
        firstName = names[0];
        lastName = names[1];
        if (typeof lastName == 'undefined'){
          lastName = '';
        }
        gender = document.getElementsByClassName('gender_search')[0].value;
        jQuery.ajax({
          type: "POST",
          url: "/student/archive_students_seach",
          data: "first_name=" + firstName + "&last_name=" + lastName + "&gender=" + gender,
          success: function(results){
            //results = eval("(" + results  + ")");
            html = "";
            tbody = document.getElementById("students");
            for (var student_id in results){
              firstName = results[student_id]["fname"];
              lastName = results[student_id]["lname"];
              gender = results[student_id]["gender"];
              phone = results[student_id]["phone"];
              if (phone == null) phone = '';
              email = results[student_id]["email"];
              if (email == null) email = '';
              dob = results[student_id]["dob"];
              join_date = results[student_id]["join_date"];
              current_active_class = results[student_id]["current_active_class"];
              guardian_details = results[student_id]["guardian_details"];

              html+="<tr id='" + student_id + "'><td><input type='checkbox' student_id='" + student_id + "'/></td>";
              html+="<td style='text-align:left; padding: 0.833em 0 0.833em 1.25em;'>" + firstName + ' ' + lastName +  "</td>";
              html+="<td><a href='#'>" + email +  "</a></td>";
              html+="<td>" + gender +  "</td>";
              html+="<td>" + dob +  "</td>";
              html+="<td>" + phone +  "</td>";
              html+="<td>" + current_active_class +  "</td>";
              html+="<td>" + guardian_details +  "</td>";
              html+="<td><a student_id=" + student_id + " href='#' onmousedown='setcurrentStudentID(this)' class='table-actions-button ic-table-retire confirm'></a></td>";
              html+="</tr>";
            }

            tbody.innerHTML = html;
            $(".confirm").confirm({
              title:"Archive confirmation",
              text:"This is very dangerous, you shouldn't do it! Are you really really sure?",
              confirm: function(button) {
                //archiveSingleEntry();
                currentMode = 'single';
                captureArchiveReason();

              },
              cancel: function(button) {

              },
              confirmButton: "Yes I am",
              cancelButton: "No"
            });//Activate the popup
          }

        });

      }


      function selectAll(){
        selectAllInput = document.getElementById('table-select-all');
        inputs = document.getElementsByTagName("input");
        if (selectAllInput.checked){
          for (var i=0; i<=inputs.length - 1; i++){
            if (inputs[i] == selectAllInput) continue;
            if (inputs[i].type == 'checkbox'){
              inputs[i].checked = true;
            }
          }
        }
        else{
          for (var i=0; i<=inputs.length - 1; i++){
            if (inputs[i] == selectAllInput) continue;
            if (inputs[i].type == 'checkbox'){
              inputs[i].checked = false;
            }
          }
        }
      }

      function archiveStudents(){
        inputs = document.getElementsByTagName("input");
        archiveReason = $('#archive-reason').val();
        studentIDs = []
        for (var i=0; i<=inputs.length - 1; i++){
          if (inputs[i].type == 'checkbox'){
            if (inputs[i].checked){
              if (inputs[i].hasAttribute("student_id")){
                studentID = inputs[i].getAttribute("student_id");
                studentIDs.push(studentID);
              }
            }
          }
        }

        jQuery.ajax({
          type: "POST",
          url: "/student_archives/archive_students",
          data: "student_ids=" + studentIDs + '&archive_reason=' + archiveReason,
          success: function(){
            for (var x=0; x<= studentIDs.length - 1; x++){
              id = studentIDs[x];
              element = document.getElementById(id);
              element.parentNode.removeChild(element)
            }
          }

        });
      }
      var currentStudentID = "";
      function setcurrentStudentID(obj){
        currentStudentID = obj.getAttribute("student_id");
      }

      function archiveSingleEntry(){
        archiveReason = $('#archive-reason').val();
        jQuery.ajax({
          type: "POST",
          url: "/student_archives/archive_students",
          data: "student_id=" + currentStudentID + "&mode=single_entry&archive_reason=" + archiveReason,
          success: function(){
            element = document.getElementById(currentStudentID);
            element.parentNode.removeChild(element);
          }

        });
      }
    </script>

    <style>
      .label {
        border-radius: 1.5em;
        color: #fff;
        display: inline;
        background-color: #5bc0de;
        font-size: 1.2em;
        font-weight: bold;
        line-height: 1;
        padding-left: 20%;
        padding-right: 20%;
        padding-top:2%;
        padding-bottom:2%;
        text-align: center;
        vertical-align: baseline;
        white-space: nowrap;
        cursor: pointer;
      }

      input[type="submit"] {
        margin-left: 37%;
      }

      table th:first-child {
        border-style: none none none !important;
      }

      .modal-title {
        font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
        font-weight: 500;
        line-height: 1.1;
        font-size: 1.2em;
        color: #317eac;
      }

      a{
        cursor: pointer;
      }

      #search-student-form fieldset {
        border: 1px solid gray;
        float: left;
        margin-bottom: 15px;
        padding: 0px;
        float: none;
      }
      #search-student-form legend {
        color: #abda0f;
        font-size: 14px;
        font-weight: 100;
        margin-left: 14px;
        padding: 2px;
        width: initial;
        margin-bottom: initial;
        border-style: none;
      }

      #search-student-form fieldset input {
        color: #505050;
        float: left;
        margin-right: 5px;
        width: 250px;
        padding: 6px;
        font-size: 14px;
        border: 1px solid #d9dbdd;
        outline: medium none;
      }

      #search-student-form table td{
        border-left: none;
      }

      form.autoform input, select {
        font-size: 0.8em !important;
        font-weight: bold;
      }

      .orange{
        background-color: #EEEE00 !important;
      }

      .ic-table-retire {
        background-image: url("../images/icons/table/actions-retire.png");
        height: 2.25em !important;
        width: 2.25em !important;
      }

      #dropdown-actions {
        background-color: #fff;
        background-image: none;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-shadow: 0 1px 1px rgba(0, 0, 0, 0.075) inset;
        color: #555;
        font-size: 12px !important;
        height: 34px;
        line-height: 1.42857;
        margin-left: 0;
        text-align: center;
        width: 146px;
        padding: 6px 12px;
        transition: border-color 0.15s ease-in-out 0s, box-shadow 0.15s ease-in-out 0s;
      }
    </style>
  </head>
  <body>
    <!-- HEADER -->
    <div id="header-with-tabs">

      <div class="page-full-width cf">

        <ul id="tabs" class="fl">
          <li><a href="/class_room/switch_class_room_menu?class_room_id=<%= params[:class_room_id] %>" class="active-tab dashboard-tab orange"><%= @class_room.name %></a></li>
          <li><a href="/class_room/admissions_tab?class_room_id=<%= params[:class_room_id] %>" class="active-tab">Admissions/Registrations</a></li>
          <li><a href="/class_room/attendance_tab?class_room_id=<%= params[:class_room_id] %>">Attendance Register</a></li>
          <li><a href="/class_room/behavior_tab?class_room_id=<%= params[:class_room_id] %>">Behavior</a></li>
          <li><a href="/class_room/examinations_tab?class_room_id=<%= params[:class_room_id] %>">Examinations</a></li>
          <li><a href="/class_room/payments_tab?class_room_id=<%= params[:class_room_id] %>">Payments</a></li>
          <li><a href="/class_room/courses_tab?class_room_id=<%= params[:class_room_id] %>">Courses</a></li>
          <li><a href="/class_room/teachers_tab?class_room_id=<%= params[:class_room_id] %>">Teachers</a></li>
        </ul> <!-- end tabs -->

        <!-- Change this image to your own company's logo -->
        <!-- The logo will automatically be resized to 30px height. -->
        <a href="#" id="company-branding-small" class="fr"><%= image_tag("/admin/school_logo", :alt => 'Logo Missing')%></a>

      </div> <!-- end full-width -->

    </div> <!-- end header -->



    <!-- MAIN CONTENT -->
    <div id="content">

      <div class="page-full-width cf">

        <div class="side-menu fl">

          <h3>Task</h3>
          <ul>
            <li><a href="/class_room/student_admissions?class_room_id=<%= params[:class_room_id] %>">Student Admission</a></li>
            <li><a href="/class_room/student_courses?class_room_id=<%= params[:class_room_id] %>">Assign/Edit Student Courses</a></li>
            <li><a href="/class_room/student_guardians?class_room_id=<%= params[:class_room_id] %>">Assign/Edit Student Guardian</a></li>
            <li><a href="/class_room/student_archieve?class_room_id=<%= params[:class_room_id] %>">Archive Non Active Students</a></li>
            <li><a href="/class_room/student_view?class_room_id=<%= params[:class_room_id] %>">View Students</a></li>
          </ul>

        </div> <!-- end side-menu -->

        <div class="side-content fr">

          <div class="content-module">

            <div class="content-module-heading cf">

              <h3 class="fl">Archive Students</h3>
              <span class="fr expand-collapse-text">Click to collapse</span>
              <span class="fr expand-collapse-text initial-expand">Click to expand</span>

            </div> <!-- end content-module-heading -->


            <div class="content-module-main">
              <% if flash[:notice] %>
                <div class="confirmation-box round">
                  <%= flash[:notice] %>
                </div>
              <% end %>
              <% if flash[:error] %>
                <div class="error-box round">
                  <%= flash[:error] %>
                </div>
              <% end %>

              <a onclick="studentsArchivePath()" href="#" class="button round blue image-right ic-right-arrow text-upper">View Archived Students <b><i>(<%= @class_room.name %>)</i></b></a>
              
              <form id="search-student-form" action="#">
                <fieldset>
                  <legend>Search</legend>
                  <div style="margin-left:2%;">
                    <table style="width: 45%; float: right;">
                      <tr>
                        <td style="font-size: 13pt;">Name</td>
                        <td style="width: 50px !important;"><input type="text" class="class_room_search"/></td>
                        <td style="width: 20px"><a onclick="loadSearchResults();" class="button round blue image-right ic-search text-upper">Search</a></td>
                      </tr>
                    </table>
                  </div>
                </fieldset>
              </form>

              <table>

                <thead>

                  <tr>
                    <th><input type="checkbox" id="table-select-all" onclick="selectAll();"/></th>
                    <th style="min-width:15%;">Name</th>
                    <th>Email</th>
                    <th>Gender</th>
                    <th>Date Of Birth</th>
                    <th>Phone #</th>
                    <th>Latest Class</th>
                    <th>Guardian Details</th>
                    <th>Action</th>
                  </tr>

                </thead>

                <tfoot>
                  <tr>
                    <td colspan="8" class="table-footer">
                      <a href="#" class="button round blue image-right ic-right-arrow text-upper archive-multiple">Archive Selected</a>
                    </td>
                  </tr>
                </tfoot>

                <tbody id="students">
                  <% @students.each do |student| %>
                    <tr id="<%= student.id %>">
                      <td><input type="checkbox" student_id="<%= student.id %>"/></td>
                      <td style="text-align:left; padding: 0.833em 0 0.833em 1.25em;"><%= student.fname.capitalize.to_s + ' ' + student.lname.capitalize.to_s %></td>
                      <td><a href="#"><%=  student.email %></a></td>
                      <td><%=  student.gender %></td>
                      <td><%=  student.dob.to_date.strftime("%d-%b-%Y") %></td>
                      <td><%=  student.phone %></td>
                      <td><%=  student.current_active_class %></td>
                      <td><%=  student.guardian_details %></td>
                      <td>
                        <a student_id="<%= student.id %>" href="#" onmousedown="setcurrentStudentID(this)" class="table-actions-button ic-table-retire confirm"></a>
                      </td>
                    </tr>
                  <% end %>
                </tbody>

              </table>
            </div> <!-- end content-module-main -->

          </div> <!-- end content-module -->

        </div> <!-- end side-content -->

      </div> <!-- end full-width -->

    </div> <!-- end content -->

    <%= javascript_include_tag("bootstrap") %>

    <script type="text/javascript">
      var currentMode = ''
      $(".archive-multiple").confirm({
        title:"Archive confirmation",
        text:"This is very dangerous, you shouldn't do it! Are you really really sure?",
        confirm: function(button) {
          //archiveStudents();
          currentMode = 'multiple';
          captureArchiveReason();
        },
        cancel: function(button) {
          alert("You aborted the operation.");
        },
        confirmButton: "Yes I am",
        cancelButton: "No"
      });

      $(".confirm").confirm({
        title:"Archive confirmation",
        text:"This is very dangerous, you shouldn't do it! Are you really really sure?",
        confirm: function(button) {
          //archiveSingleEntry();
          currentMode = 'single';
          captureArchiveReason();

        },
        cancel: function(button) {

        },
        confirmButton: "Yes I am",
        cancelButton: "No"
      });

      function captureArchiveReason(){
        $('#myModal').modal('show');
      }

      function processData(){
        console.log("Current Mode = " + currentMode);
        if (currentMode == 'multiple'){
          archiveStudents();
        }

        if (currentMode == 'single'){
          archiveSingleEntry();
        }
      }

    </script>

    <!--CONFIRMATION POPUP BEGIN -->
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title" id="myModalLabel">
              Archive Reason
            </h4>
          </div>
          <div class="modal-body">
            <span style="text-align:center;">
              <textarea rows='3' cols='76' id='archive-reason' placeholder='Archive reason goes here'></textarea>
            </span>
            <div class="modal-footer">
              <button type="button" class="btn btn-primary" onclick="processData();" data-dismiss="modal">Okay</button>
              <button type="button" class="btn" data-dismiss="modal">Cancel</button>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!--CONFIRMATION POPUP END -->
  </body>
</html>