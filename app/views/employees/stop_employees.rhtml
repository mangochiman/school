            <div class="content-module-heading cf">

              <h3 class="fl">Stop Employees</h3>
              <span class="fr expand-collapse-text">Click to collapse</span>
              <span class="fr expand-collapse-text initial-expand">Click to expand</span>

            </div> <!-- end content-module-heading -->


            <div class="content-module-main">

              <% if flash[:notice] %>
                <div class="confirmation-box round">
                  <%= flash[:notice] %>
                </div>
              <% end %>
              <% if flash[:error] %>
                <div class="error-box round">
                  <%= flash[:error] %>
                </div>
              <% end %>
              <table>

                <thead>

                  <tr>
                    <th><input type="checkbox" id="table-select-all" onclick="selectAll();"/></th>
                    <th style="min-width:15%;">Name</th>
                    <th>Email</th>
                    <th>Gender</th>
                    <th>Date Of Birth</th>
                    <th>Phone #</th>
                    <th>Position</th>
                    <th>Stop</th>
                  </tr>
                </thead>

                <tfoot>
                  <tr>
                    <td colspan="3" class="table-footer">
                      <a href="#" class="button round blue image-right ic-right-arrow text-upper stop-multiple">Stop Employees</a>
                    </td>
                  </tr>
                </tfoot>

                <tbody id="employees">
                  <% @employees.each do |employee| %>
                    <tr id="<%= employee.id %>">
                      <td><input type="checkbox" employee_id="<%= employee.id %>"/></td>
                      <td style="text-align:left; padding: 0.833em 0 0.833em 1.25em;"><%= employee.fname.capitalize.to_s + ' ' + employee.lname.capitalize.to_s %></td>
                      <td><a href="#"><%=  employee.email %></a></td>
                      <td><%=  employee.gender %></td>
                      <td><%=  employee.dob.to_date.strftime("%d-%b-%Y") %></td>
                      <td><%=  employee.phone %></td>
                      <td><%=  employee.employee_position.position.name.titleize %></td>
                      <td>
                        <a employee_id="<%= employee.id %>" href="#" onmousedown="setCurrentEmployeeId(this); interval = window.setInterval('loadDatePicker();', 350);" class="table-actions-button ic-table-stop confirm"></a>
                      </td>
                    </tr>
                  <% end %>
                </tbody>

              </table>

