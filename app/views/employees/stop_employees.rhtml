    <script>

      $(".stop-multiple").confirm({
        title:"Stop Employee confirmation",
        text:"Are you sure you want to stop the selected employee? <br /><br />Date Stopped: <input value='<%= Date.today.strftime('%Y-%m-%d') %>' type='text' id='stop_date' class='date-picker'/>",
        confirm: function(button) {
          startDate = document.getElementById('stop_date').value;
          endDate = ""
          stopEmployees(startDate, endDate);
        },
        cancel: function(button) {
        },
        confirmButton: "Yes I am",
        cancelButton: "No"
      });

      $(".confirm").confirm({
        title:"Stop Employee confirmation",
        text:"Are you sure you want to stop the selected employee? <br /><br />Date Stopped: <input value='<%= Date.today.strftime('%Y-%m-%d') %>' type='text' id='stop_date' class='date-picker'/>",
        confirm: function(button) {
          startDate = document.getElementById('stop_date').value;
          endDate = ""
          stopSingleEntry(startDate, endDate);
        },
        cancel: function(button) {

        },
        confirmButton: "Yes I am",
        cancelButton: "No"
      });
      
      function loadDatePicker(){
        $('.date-picker').Zebra_DatePicker({
          view : 'years',
          direction: ['<%=  (Date.today - 30.years).strftime("%Y-%m-%d") %>', '<%= Date.today.strftime("%Y-%m-%d") %>']
        });
        stopDate = document.getElementById('stop_date');
        if (stopDate){
          clearInterval(interval);
        }
      }
    </script>
