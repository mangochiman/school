    <script>
      function selectAll(){
        selectAllInput = document.getElementById('table-select-all');
        inputs = document.getElementsByTagName("input");
        if (selectAllInput.checked){
          for (var i=0; i<=inputs.length - 1; i++){
            if (inputs[i] == selectAllInput) continue;
            if (inputs[i].type == 'checkbox'){
              inputs[i].checked = true;
            }
          }
        }
        else{
          for (var i=0; i<=inputs.length - 1; i++){
            if (inputs[i] == selectAllInput) continue;
            if (inputs[i].type == 'checkbox'){
              inputs[i].checked = false;
            }
          }
        }
      }

      function deletePunishmentTypes(){
        inputs = document.getElementsByTagName("input");
        punishmentTypeIDs = []
        for (var i=0; i<=inputs.length - 1; i++){
          if (inputs[i].type == 'checkbox'){
            if (inputs[i].checked){
              if (inputs[i].hasAttribute("punishment_type_id")){
                punishmentTypeID = inputs[i].getAttribute("punishment_type_id");
                punishmentTypeIDs.push(punishmentTypeID);
              }
            }
          }
        }

        jQuery.ajax({
          type: "POST",
          url: "/punishments/delete_punishment_types",
          data: "punishment_type_ids=" + punishmentTypeIDs,
          success: function(){
            for (var x=0; x<= punishmentTypeIDs.length - 1; x++){
              id = punishmentTypeIDs[x];
              element = document.getElementById(id);
              element.parentNode.removeChild(element)
            }
          }

        });
      }
      var currentPunishmentTypeId = "";
      function setCurrentPunishmentTypeId(obj){
        currentPunishmentTypeId = obj.getAttribute("punishment_type_id");
      }

      function deleteSingleEntry(){
        jQuery.ajax({
          type: "POST",
          url: "/punishments/delete_punishment_types",
          data: "punishment_type_id=" + currentPunishmentTypeId + "&mode=single_entry",
          success: function(){
            element = document.getElementById(currentPunishmentTypeId);
            element.parentNode.removeChild(element);
          }

        });
      }
    </script>

