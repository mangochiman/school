              <% end %>
              <table>

                <thead>
                  <tr>
                    <th><input type="checkbox" id="table-select-all" onclick="selectAll();"/></th>
                    <th style="min-width:35%;">Punishment Type</th>
                    <th style="min-width:35%;"><center>Date created</center></th>
                    <th>Action</th>
                  </tr>
                </thead>

                <tfoot>
