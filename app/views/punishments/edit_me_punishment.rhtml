        outline: medium none;
        padding: 0.5em 0.225em;
      }

      #punishment_details textarea{
        padding: 0.5em 0.225em;
        width: 250px;
      }

      .punishment_details .msg.icon {
        position: absolute !important;
      }

      form.autoform select {
