    <script>
      function selectAll(){
        selectAllInput = document.getElementById('table-select-all');
        inputs = document.getElementsByTagName("input");
        if (selectAllInput.checked){
          for (var i=0; i<=inputs.length - 1; i++){
            if (inputs[i] == selectAllInput) continue;
            if (inputs[i].type == 'checkbox'){
              inputs[i].checked = true;
            }
          }
        }
        else{
          for (var i=0; i<=inputs.length - 1; i++){
            if (inputs[i] == selectAllInput) continue;
            if (inputs[i].type == 'checkbox'){
              inputs[i].checked = false;
            }
          }
        }
      }

      function punishStudents(startDate, endDate){
        inputs = document.getElementsByTagName("input");
        employeeIDs = []
        for (var i=0; i<=inputs.length - 1; i++){
          if (inputs[i].type == 'checkbox'){
            if (inputs[i].checked){
              if (inputs[i].hasAttribute("employee_id")){
                employeeID = inputs[i].getAttribute("employee_id");
                employeeIDs.push(employeeID);
              }
            }
          }
        }

        jQuery.ajax({
          type: "POST",
          url: "/employees/end_contract",
          data: "employee_ids=" + employeeIDs + "&start_date=" + startDate + "&end_date=" + endDate,
          success: function(){
            for (var x=0; x<= employeeIDs.length - 1; x++){
              id = employeeIDs[x];
              element = document.getElementById(id);
              element.parentNode.removeChild(element)
            }
          }

        });
      }
      var currentStudentId = "";
      function setCurrentStudentId(obj){
        currentStudentId = obj.getAttribute("employee_id");
      }

      function punishSingleEntry(startDate, endDate){
        jQuery.ajax({
          type: "POST",
          url: "/employees/end_contract",
          data: "employee_id=" + currentEmployeeId + "&start_date=" + startDate + "&end_date=" + endDate + "&mode=single_entry",
          success: function(){
            element = document.getElementById(currentEmployeeId);
            element.parentNode.removeChild(element);
          }

        });
      }

      function validatePunishmentDetails(){
        if ($('#punishment_type_select').val() == "" || $('#teacher').val() == ""){
          $("button[class='confirm btn btn-primary']").css("display", 'none') //Hide okay button when form is incomplete
        }
        if ($('#punishment_type_select').val() != "" && $('#teacher').val() != ""){
          $("button[class='confirm btn btn-primary']").css("display", '') //Show okay button when form is complete
        }
      }
      window.setInterval("validatePunishmentDetails();", 350);
    </script>
    <style>
