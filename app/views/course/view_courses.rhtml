<!DOCTYPE html>

<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>SimpleAdmin - Dashboard</title>
    <!-- Optimize for mobile devices -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>

    <!-- jQuery & JS files -->
    <%= javascript_include_tag("jquery") %>
    <%= javascript_include_tag("script") %>
    <%= javascript_include_tag("jquery-1.9.1.min") %>
    <%= javascript_include_tag("jquery.confirm") %>
    <%= stylesheet_link_tag("style") %>

    <script>
      function filterCoursesByClassRooms(){
        classRoomId = document.getElementById('class_room').value;
        jQuery.ajax({
          type: "POST",
          url: "/course/view_courses",
          data: "class_room_id=" + classRoomId,
          success: function(results){
            results = eval('(' + results + ')');
            count = 0;
            html = ""
            for (var courseId in results){
              count = count + 1;
              courseName = results[courseId]["course_name"];
              dateCreated = results[courseId]["date_created"];
              html += "<tr>";
              html += "<td>" + count + "</td>";
              html += "<td style='text-align:left; padding: 0.833em 0 0.833em 1.25em;'>" + courseName + "</td>";
              html += "<td><center>" + dateCreated + "</center></td>";
              html += "</tr>";
            }
            document.getElementById('courses').innerHTML = html;
          }

      });
      }
    </script>
    <style>
      .modal-title {
        font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
        font-weight: 500;
        line-height: 1.1;
        font-size: 1.2em;
        color: #317eac;
      }

      table th:first-child {
        border-style: none none none !important;
      }

      #filter-graph-form fieldset {
        border: 1px solid gray;
        padding: 0px;
        width: 98.7%;
      }
      #filter-graph-form legend {
        color: #abda0f;
        font-size: 14px;
        font-weight: 100;
        margin-left: 14px;
        padding: 2px;
      }
      #filter-graph-form fieldset input {
        color: #505050;
        float: left;
        margin-right: 5px;
        width: 140px;
        padding: 0px;
        font-size: 14px;
      }

      #class_room{
        background-color: #fff;
        background-image: none;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-shadow: 0 1px 1px rgba(0, 0, 0, 0.075) inset;
        color: #555;
        display: block;
        font-size: 14px;
        height: 34px;
        line-height: 1.42857;
        padding: 6px 12px;
        min-width: 167px;
        transition: border-color 0.15s ease-in-out 0s, box-shadow 0.15s ease-in-out 0s;
      }

      a{
        cursor: pointer;
      }
    </style>
  </head>
