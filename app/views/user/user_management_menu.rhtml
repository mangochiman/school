<!DOCTYPE html>

<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>User Management</title>
    <!-- Optimize for mobile devices -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>

    <!-- jQuery & JS files -->

    <%= javascript_include_tag("jquery-1.9.1.min") %>
    <%= javascript_include_tag("highcharts") %>
    <%= javascript_include_tag("script") %>

    <%= javascript_include_tag("exporting") %>
    <%= stylesheet_link_tag("style") %>

    <script type="text/javascript">
      function newUser(){
        window.location = "/user/new_user";
      }
    </script>

    <style type="text/css">

      table th:first-child {
        border-style: none none none !important;
      }

      a{
        cursor: pointer;
      }
      
    </style>

  </head>
  <body>
    <!-- HEADER -->
    <div id="header-with-tabs">

      <div class="page-full-width cf">

        <ul id="tabs" class="fl">
          <li><a href="/user/user_management_dashboard" class="dashboard-tab">Dashboard</a></li>
          <li><a href="/user/user_management_menu" class="active-tab">Users</a></li>
        </ul> <!-- end tabs -->

        <!-- Change this image to your own company's logo -->
        <!-- The logo will automatically be resized to 30px height. -->
        <a href="#" id="company-branding-small" class="fr"><%= image_tag("/admin/school_logo", :alt => 'Logo Missing')%></a>

      </div> <!-- end full-width -->

    </div> <!-- end header -->



    <!-- MAIN CONTENT -->
    <div id="content">

      <div class="page-full-width cf">

        <div class="side-menu fl">

          <h3>Task</h3>
          <ul>
            <li><a href="/user/new_user">Create User</a></li>
            <li><a href="/user/edit_user">Edit User</a></li>
            <li><a href="/user/void_users">Void Users</a></li>
            <li><a href="/user/view_users">View users</a></li>
          </ul>

        </div> <!-- end side-menu -->

        <div class="side-content fr">

          <div class="content-module">

            <div class="content-module-heading cf">

              <h3 class="fl">User Management</h3>
              <span class="fr expand-collapse-text">Click to collapse</span>
              <span class="fr expand-collapse-text initial-expand">Click to expand</span>

            </div> <!-- end content-module-heading -->


            <div class="content-module-main">
              <div id="container">
                <div>
                Total Users <span class="badge" style="font-size: 12pt;"><%= @users.count %></span>
              </div><br />
                <table>
                  <thead>
                    <tr>
                      <th>#</th>
                      <th style="text-align:center;">Username</th>
                      <th style="text-align:center;">First Name</th>
                      <th style="text-align:center;">Last Name</th>
                      <th style="text-align:center; width:15%;">Date created</th>
                    </tr>
                  </thead>

                  <tbody id="users">
                    <% count = 0 %>
                    <% @users.each do |user| %>
                      <tr>
                        <td><%= count = count + 1 %></td>
                        <td style="text-align:left; padding:4px; text-align: center;"><%= user.username %></td>
                        <td style="text-align:center;"><%= user.first_name %></td>
                        <td style="text-align:center;"><%= user.last_name %></td>
                        <td><center><%= user.created_at.to_date.strftime("%d-%b-%Y") %></center></td>
                      </tr>
                    <% end %>
                  </tbody>

                </table>

              <a class="button round blue image-right ic-add text-upper" onclick="newUser()">New User &nbsp;</a>

              </div>
            </div> <!-- end content-module-main -->

          </div> <!-- end content-module -->

          <!-- end content-module -->

        </div> <!-- end side-content -->

      </div> <!-- end full-width -->

    </div> <!-- end content -->

  </body>
</html>