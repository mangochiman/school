<!DOCTYPE html>

<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>SimpleAdmin - Dashboard</title>
    <!-- Optimize for mobile devices -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>

    <!-- jQuery & JS files -->
    <%= javascript_include_tag("jquery") %>
    <%= javascript_include_tag("script") %>
    <%= javascript_include_tag("jquery-1.9.1.min") %>
    <%= javascript_include_tag("jquery.confirm") %>
    <%= stylesheet_link_tag("style") %>
    <%= stylesheet_link_tag("bootstrap") %>
    <script>
      function selectAll(){
        selectAllInput = document.getElementById('table-select-all');
        inputs = document.getElementsByTagName("input");
        if (selectAllInput.checked){
          for (var i=0; i<=inputs.length - 1; i++){
            if (inputs[i] == selectAllInput) continue;
            if (inputs[i].type == 'checkbox'){
              inputs[i].checked = true;
            }
          }
        }
        else{
          for (var i=0; i<=inputs.length - 1; i++){
            if (inputs[i] == selectAllInput) continue;
            if (inputs[i].type == 'checkbox'){
              inputs[i].checked = false;
            }
          }
        }
      }
      
      function loadExamStudents(obj){
        jQuery.ajax({
          type: "POST",
          url: "/examination/render_students",
          data: "exam_id=" + obj.getAttribute("exam_id"),
          success: function(results){
            table = "<table style='width:60%; margin-left:10%;'>";
            table+="<tr>";
            table+="<th>#</th>";
            table+="<th>Student Name</th>";
            table+="</tr>";
            var pos = 0
            className = results[0]
            results = results[1];
            for (var i=0; i<=results.length - 1; i++){
              studentName = results[i];
              table+="<tr style='background-color:white;'>";
              table+="<td>" + (pos = pos + 1) + "</td>";
              table+="<td style='text-align:left; padding-left:18%;'>" + studentName + "</td>";
              table+="</tr>";
            }

            table += "</table>";
            students = table;

            jQuery.confirm({
              title:className,
              text:students,
              confirm: function(button) {
              },
              cancel: function(button) {
              },
              confirmButton: "Done"
            });
          }});
      }

      function loadExamResults(obj){
        jQuery.ajax({
          type: "POST",
          url: "/examination/render_exam_results",
          data: "exam_id=" + obj.getAttribute("exam_id"),
          success: function(results){
            table = "<table style='width:60%; margin-left:10%;'>";
            table+="<tr>";
            table+="<th style='width:60%;'>Student Name</th>";
            table+="<th>Marks</th>";
            table+="</tr>";
            className = results[0]
            results = results[1];
            for (var i=0; i<=results.length - 1; i++){
              studentName = results[i];
              console.log(studentName)
              table+="<tr style='background-color:white;'>";
              table+="<td style='text-align:left; padding-left:15%;'>" + results[i].name + "</td>";
              table+="<td style='text-align:center; font-weight:bold;'>" + results[i].marks + "</td>";
              table+="</tr>";
            }

            table += "</table>";
            students = table;

            jQuery.confirm({
              title:className,
              text:students,
              confirm: function(button) {
              },
              cancel: function(button) {
              },
              confirmButton: "Done"
            });
          }});
      }
        
      function deleteSingleEntry(obj){
        examID = obj.getAttribute('exam_id')
        jQuery.confirm({
          title:"Delete confirmation",
          text:"This is very dangerous, you shouldn't do it! Are you really really sure?",
          confirm: function(button) {
            jQuery.ajax({
              type: "POST",
              url: "/examination/delete_exam_results",
              data: "exam_id=" + examID + "&mode=single_entry",
              success: function(){
                element = document.getElementById(examID);
                element.parentNode.removeChild(element);
              }

            });
          },
          cancel: function(button) {

          },
          confirmButton: "Yes I am",
          cancelButton: "No"
        });
      }

      function deleteExamResults(){
        inputs = document.getElementsByTagName("input");
        examIDs = []
        for (var i=0; i<=inputs.length - 1; i++){
          if (inputs[i].type == 'checkbox'){
            if (inputs[i].checked){
              if (inputs[i].hasAttribute("exam_id")){
                examID = inputs[i].getAttribute("exam_id");
                examIDs.push(examID);
              }
            }
          }
        }

        jQuery.ajax({
          type: "POST",
          url: "/examination/delete_exam_results",
          data: "exam_ids=" + examIDs,
          success: function(){
            for (var x=0; x<= examIDs.length - 1; x++){
              id = examIDs[x];
              element = document.getElementById(id);
              element.parentNode.removeChild(element);
            }
          }

        });
      }
    </script>
    <style>
      .modal-title {
        font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
        font-weight: 500;
        line-height: 1.1;
        font-size: 1.2em;
        color: #317eac;
      }

      #filter td{
        border: none;
      }

      #dropdown-actions{
        background-color: #fff;
        background-image: none;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-shadow: 0 1px 1px rgba(0, 0, 0, 0.075) inset;
        color: #555;
        font-size: 14px;
        height: 34px;
        line-height: 1.42857;
        margin-left: 30%;
        min-width: 108px;
        padding: 6px 12px;
        transition: border-color 0.15s ease-in-out 0s, box-shadow 0.15s ease-in-out 0s;
        margin-left: 0%;
      }

      #dropdown-actions option{
        padding-left: 20px;
      }

      #search-student-form fieldset {
        border: 1px solid gray;
        float: left;
        margin-bottom: 15px;
        padding: 5px;
        width: 98.7%;
      }
      #search-student-form legend {
        color: #abda0f;
        font-size: 14px;
        font-weight: 100;
        margin-left: 14px;
        padding: 2px;

        -moz-border-bottom-colors: none;
        -moz-border-left-colors: none;
        -moz-border-right-colors: none;
        -moz-border-top-colors: none;
        border-color: none;
        border-image: none;
        border-style: none;
        border-width: 0;

        margin-bottom: 0px;
        padding: 0;
        width: auto;
      }

      #search-student-form fieldset input {
        color: #505050;
        float: left;
        margin-right: 5px;
        width: 140px;
        padding: 3px;
        font-size: 14px;
      }

      table th:first-child {
        border-style: none none none !important;
      }

      .modal-title {
        font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
        font-weight: 500;
        line-height: 1.1;
        font-size: 1.2em;
        color: #317eac;
      }
      .label {
        border-radius: 1.5em;
        color: #fff;
        display: inline;
        background-color: #5bc0de;
        font-size: 1.2em;
        font-weight: bold;
        line-height: 1;
        padding-left: 20%;
        padding-right: 20%;
        padding-top:2%;
        padding-bottom:2%;
        text-align: center;
        vertical-align: baseline;
        white-space: nowrap;
        cursor: pointer;
      }
    </style>
  </head>
  <body>   
    <!-- HEADER -->
    <div id="header-with-tabs">

      <div class="page-full-width cf">

        <ul id="tabs" class="fl">
          <li><a href="/student/examination_results_dashboard" class="dashboard-tab">Dashboard</a></li>
          <li><a href="/examination/index" class="active-tab">Examinations</a></li>
        </ul> <!-- end tabs -->

        <!-- Change this image to your own company's logo -->
        <!-- The logo will automatically be resized to 30px height. -->
        <a href="#" id="company-branding-small" class="fr"><%= image_tag("/admin/school_logo", :alt => 'Logo Missing')%></a>

      </div> <!-- end full-width -->

    </div> <!-- end header -->



    <!-- MAIN CONTENT -->
    <div id="content">

      <div class="page-full-width cf">

        <div class="side-menu fl">

          <h3>Task</h3>
          <ul>
            <li><a href="/examination/assign_exam">Assign Exam</a></li>
            <li><a href="/examination/edit_exam_assignment">Edit Exam Assignment</a></li>
            <li><a href="/examination/void_exam">Void Exam</a></li>
            <li><a href="/examination/capture_exam_results">Capture Exam Results</a></li>
            <li><a href="/examination/edit_exam_results">Edit Exam Results</a></li>
            <li><a href="/examination/void_exam_results">Void Exam Results</a></li>
          </ul>

        </div> <!-- end side-menu -->

        <div class="side-content fr">

          <div class="content-module">

            <div class="content-module-heading cf">

              <h3 class="fl">Void Exam Results</h3>
              <span class="fr expand-collapse-text">Click to collapse</span>
              <span class="fr expand-collapse-text initial-expand">Click to expand</span>

            </div> <!-- end content-module-heading -->


            <div class="content-module-main">
              <% if flash[:notice] %>
                <div class="confirmation-box round">
                  <%= flash[:notice] %>
                </div>
              <% end %>
              <% if flash[:error] %>
                <div class="error-box round">
                  <%= flash[:error] %>
                </div>
              <% end %>
              <form id="search-student-form" action="#">
                <fieldset>
                  <legend>Filter</legend>
                  <div style="">
                    <table id="filter">
                      <tr>
                        <td style="text-align:right;">Class</td>
                        <td style="">

                          <%= select_tag:class_name, options_for_select(@class_rooms), {
                            :id => "dropdown-actions", :class => "class_room_search"} %>
                        </td>
                        <td style="text-align:right;">Select Course</td>
                        <td style="">
                          <%= select_tag:class_name, options_for_select(@courses), {
                            :id => "dropdown-actions", :class => "class_room_search"} %>
                        </td>
                        <td style="text-align:right;">Select Exam Type</td>
                        <td>
                          <%= select_tag:class_name, options_for_select(@exam_types), {
                            :id => "dropdown-actions", :class => "class_room_search"} %>
                        </td>
                        <td>
                          <a href="#" onclick="loadSearchResults();" class="button round blue image-right ic-search text-upper">Filter</a>
                        </td>
                      </tr>            
                    </table>
                  </div>
                </fieldset>
              </form>
              <table>

                <thead>

                  <tr>
                    <th><input type="checkbox" id="table-select-all" onclick="selectAll();"/></th>
                    <th style="min-width:15%;">Class</th>
                    <th style="text-align: center;">Exam Type</th>
                    <th style="text-align: center;">Course</th>
                    <th style="text-align: center;">Exam Date</th>
                    <th style="max-width:10%; text-align: center;">Exam Attendees</th>
                    <th style="max-width:5%; text-align: center;">Exam Results</th>
                    <th style="min-width:100px;">Action</th>
                  </tr>

                </thead>

                <tfoot>
                  <tr>
                    <td colspan="5" class="table-footer">
                      <a href="#" class="button round blue image-right ic-delete text-upper delete-multiple">Delete</a>
                    </td>
                  </tr>
                </tfoot>

                <tbody id="exams">
                  <% @exams.each do |exam| %>
                    <tr id="<%= exam.id %>">
                      <td><input type="checkbox" exam_id="<%= exam.id %>"/></td>
                      <td style="text-align:left; padding: 0.833em 0 0.833em 1.25em;"><%= exam.class_room.name %></td>
                      <td style="text-align: center;"><%=  exam.examination_type.name.titleize %></td>
                      <td style="text-align: center;"><%=  exam.course.name rescue nil %></td>
                      <td style="text-align: center;"><%=  exam.start_date.to_date.strftime("%d/%b/%Y")%></td>
                      <td>
                        <span exam_id="<%= exam.id %>" class="label" onmousedown="loadExamStudents(this);" style="margin-left:20%;">
                          <%=  exam.students.count %>
                        </span>
                      </td>
                      <td>
                        <span exam_id="<%= exam.id %>" class="label" onmousedown="loadExamResults(this);" style="margin-left:10%;">
                          View
                        </span>
                      </td>
                      <td>
                        <a exam_id="<%= exam.id %>" onmousedown="deleteSingleEntry(this)" href="#" class="table-actions-button ic-table-delete"></a>
                      </td>
                    </tr>
                  <% end %>
                </tbody>

              </table>

            </div> <!-- end content-module-main -->

          </div> <!-- end content-module -->

        </div> <!-- end side-content -->

      </div> <!-- end full-width -->

    </div> <!-- end content -->

    <%= javascript_include_tag("bootstrap") %>

    <script>
      $(".delete-multiple").confirm({
        title:"Delete confirmation",
        text:"This is very dangerous, you shouldn't do it! Are you really really sure?",
        confirm: function(button) {
          deleteExamResults();
        },
        cancel: function(button) {

        },
        confirmButton: "Yes I am",
        cancelButton: "No"
      });
    </script>
  </body>
</html>