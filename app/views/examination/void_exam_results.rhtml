<!DOCTYPE html>

<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>SimpleAdmin - Dashboard</title>
    <!-- Optimize for mobile devices -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>

    <!-- jQuery & JS files -->
    <%= javascript_include_tag("jquery") %>
    <%= javascript_include_tag("script") %>
    <%= javascript_include_tag("jquery-1.9.1.min") %>
    <%= javascript_include_tag("jquery.confirm") %>
    <%= stylesheet_link_tag("style") %>
    <%= stylesheet_link_tag("bootstrap") %>
    <script>
      function selectAll(){
        selectAllInput = document.getElementById('table-select-all');
        inputs = document.getElementsByTagName("input");
        if (selectAllInput.checked){
          for (var i=0; i<=inputs.length - 1; i++){
            if (inputs[i] == selectAllInput) continue;
            if (inputs[i].type == 'checkbox'){
                inputs[i].checked = true;
            }
          }
         }
         else{
           for (var i=0; i<=inputs.length - 1; i++){
            if (inputs[i] == selectAllInput) continue;
            if (inputs[i].type == 'checkbox'){
                inputs[i].checked = false;
            }
          }
         }
      }
      
      function loadExamStudents(obj){
            jQuery.ajax({
            type: "POST",
            url: "/examination/render_students",
            data: "exam_id=" + obj.getAttribute("exam_id"),
            success: function(results){
              table = "<table>";
              table+="<tr>";
              table+="<th>#</th>";
              table+="<th>Student Name</th>";
              table+="</tr>";
              var pos = 0
              className = results[0]
              results = results[1];
              for (var i=0; i<=results.length - 1; i++){
                studentName = results[i];
                table+="<tr style='background-color:white;'>";
                table+="<td>" + (pos = pos + 1) + "</td>";
                table+="<td style='text-align:left;'>" + studentName + "</td>";
                table+="</tr>";
              }

              table += "</table>";
              students = table;

              jQuery.confirm({
                title:className,
                text:students,
                confirm: function(button) {
                },
                cancel: function(button) {
                },
                confirmButton: "Done"
              });
            }});
        }

        function loadExamResults(obj){
          jQuery.ajax({
            type: "POST",
            url: "/examination/render_exam_results",
            data: "exam_id=" + obj.getAttribute("exam_id"),
            success: function(results){
              table = "<table>";
              table+="<tr>";
              table+="<th>Student Name</th>";
              table+="<th>Marks</th>";
              table+="</tr>";
              className = results[0]
              results = results[1];
              for (var i=0; i<=results.length - 1; i++){
                studentName = results[i];
                console.log(studentName)
                table+="<tr style='background-color:white;'>";
                table+="<td style='text-align:left;'>" + results[i].name + "</td>";
                table+="<td style='text-align:center;'>" + results[i].marks + "</td>";
                table+="</tr>";
              }

              table += "</table>";
              students = table;

              jQuery.confirm({
                title:className,
                text:students,
                confirm: function(button) {
                },
                cancel: function(button) {
                },
                confirmButton: "Done"
              });
            }});
        }
        
        function deleteSingleEntry(obj){
        examID = obj.getAttribute('exam_id')
        jQuery.confirm({
          title:"Delete confirmation",
          text:"This is very dangerous, you shouldn't do it! Are you really really sure?",
          confirm: function(button) {
            jQuery.ajax({
            type: "POST",
            url: "/examination/delete_exam_results",
            data: "exam_id=" + examID + "&mode=single_entry",
            success: function(){
              element = document.getElementById(examID);
              element.parentNode.removeChild(element);
            }

            });
          },
          cancel: function(button) {

          },
          confirmButton: "Yes I am",
          cancelButton: "No"
       });
      }

      function deleteExamResults(){
        inputs = document.getElementsByTagName("input");
        examIDs = []
        for (var i=0; i<=inputs.length - 1; i++){
          if (inputs[i].type == 'checkbox'){
            if (inputs[i].checked){
              if (inputs[i].hasAttribute("exam_id")){
                examID = inputs[i].getAttribute("exam_id");
                examIDs.push(examID);
              }
            }
          }
        }

        jQuery.ajax({
          type: "POST",
          url: "/examination/delete_exam_results",
          data: "exam_ids=" + examIDs,
          success: function(){
            for (var x=0; x<= examIDs.length - 1; x++){
              id = examIDs[x];
              element = document.getElementById(id);
              element.parentNode.removeChild(element);
            }
          }

        });
      }
    </script>
    <style>
      .modal-title {
        font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
        font-weight: 500;
        line-height: 1.1;
        font-size: 1.2em;
        color: #317eac;
      }
      
      #filter td{
        border: none;
      }
      
      #dropdown-actions{
        background-color: #fff;
        background-image: none;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-shadow: 0 1px 1px rgba(0, 0, 0, 0.075) inset;
        color: #555;
        font-size: 14px;
        height: 34px;
        line-height: 1.42857;
        margin-left: 30%;
        min-width: 108px;
        padding: 6px 12px;
        transition: border-color 0.15s ease-in-out 0s, box-shadow 0.15s ease-in-out 0s;
        margin-left: 0%;
      }

      #dropdown-actions option{
        padding-left: 20px;
      }

      #search-student-form fieldset {
        border: 1px solid gray;
        float: left;
        margin-bottom: 15px;
        padding: 5px;
        width: 98.7%;
      }
      #search-student-form legend {
        color: #abda0f;
        font-size: 14px;
        font-weight: 100;
        margin-left: 14px;
        padding: 2px;

        -moz-border-bottom-colors: none;
        -moz-border-left-colors: none;
        -moz-border-right-colors: none;
        -moz-border-top-colors: none;
        border-color: none;
        border-image: none;
        border-style: none;
        border-width: 0;

        margin-bottom: 0px;
        padding: 0;
        width: auto;
      }
      
      #search-student-form fieldset input {
        color: #505050;
        float: left;
        margin-right: 5px;
        width: 140px;
        padding: 3px;
        font-size: 14px;
      }
      
      table th:first-child {
        border-style: none none none !important;
      }
      
      .modal-title {
        font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
        font-weight: 500;
        line-height: 1.1;
        font-size: 1.2em;
        color: #317eac;
      }
      .label {
          border-radius: 1.5em;
          color: #fff;
          display: inline;
          background-color: #5bc0de;
          font-size: 1.2em;
          font-weight: bold;
          line-height: 1;
          padding-left: 20%;
          padding-right: 20%;
          padding-top:2%;
          padding-bottom:2%;
          text-align: center;
          vertical-align: baseline;
          white-space: nowrap;
          cursor: pointer;
      }
    </style>
  </head>
  <body>

    <!-- TOP BAR -->
