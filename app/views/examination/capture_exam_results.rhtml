<!DOCTYPE html>

<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>Exam Type Management</title>
    <!-- Optimize for mobile devices -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>

    <!-- jQuery & JS files -->
    <%= javascript_include_tag("jquery") %>
    <%= javascript_include_tag("jquery-1.9.1.min") %>
    <%= javascript_include_tag("jquery.confirm") %>
    <%= javascript_include_tag("script") %>
    <%= javascript_include_tag("gvalidator") %>
    <%= stylesheet_link_tag("style") %>
    <%= stylesheet_link_tag("metallic") %>
    <%= stylesheet_link_tag("gvalidator") %>
    <%= stylesheet_link_tag("bootstrap") %>

    <script type="text/javascript">
      function enterExamResult(obj){
        examID = obj.getAttribute("exam_id");
        window.location = "/examination/exam_result_entry?exam_id=" + examID;
      }

      function loadExamStudents(obj){
        jQuery.ajax({
          type: "POST",
          url: "/examination/render_students",
          data: "exam_id=" + obj.getAttribute("exam_id"),
          success: function(results){
            table = "<table>";
            table+="<tr>";
            table+="<th>#</th>";
            table+="<th>Student Name</th>";
            table+="</tr>";
            var pos = 0
            className = results[0]
            results = results[1];
            for (var i=0; i<=results.length - 1; i++){
              studentName = results[i];
              table+="<tr style='background-color:white;'>";
              table+="<td>" + (pos = pos + 1) + "</td>";
              table+="<td style='text-align:left;'>" + studentName + "</td>";
              table+="</tr>";
            }

            table += "</table>";
            students = table;

            jQuery.confirm({
              title:className,
              text:students,
              confirm: function(button) {
              },
              cancel: function(button) {
              },
              confirmButton: "Done"
            });
          }});
      }

      function loadExamResults(obj){
        jQuery.ajax({
          type: "POST",
          url: "/examination/render_exam_results",
          data: "exam_id=" + obj.getAttribute("exam_id"),
          success: function(results){
            table = "<table style='width:70%; margin-left:10%'>";
            table+="<tr>";
            table+="<th style='width:60%; font-weight:bold;'>Student Name</th>";
            table+="<th style='font-weight:bold;'>Marks</th>";
            table+="</tr>";
            className = results[0]
            results = results[1];
            for (var i=0; i<=results.length - 1; i++){
              studentName = results[i];
              console.log(studentName)
              table+="<tr style='background-color:white;'>";
              table+="<td style='text-align:center;'>" + results[i].name + "</td>";
              table+="<td style='text-align:center; font-weight:bold;'>" + results[i].marks + "</td>";
              table+="</tr>";
            }

            table += "</table>";
            students = table;

            jQuery.confirm({
              title:className,
              text:students,
              confirm: function(button) {
              },
              cancel: function(button) {
              },
              confirmButton: "Done"
            });
          }});
      }

      function loadSearchResults(){
        classRoomID = $('.class_room')[0].value;
        courseID = $('.course')[0].value;
        examTypeID = $('.exam_type')[0].value;
        jQuery.ajax({
          type: "POST",
          url: "/examination/filter_exams",
          data: "class_room_id=" + classRoomID + '&course_id=' + courseID + '&exam_type_id=' + examTypeID,
          success: function(results){
            results = eval("(" + results  + ")");
            html = "";
            tbody = document.getElementById("exams");
            for (var exam_id in results){
              class_room = results[exam_id]["class_room"];
              exam_type = results[exam_id]["exam_type"];
              course = results[exam_id]["course"];
              exam_date = results[exam_id]["exam_date"];
              exam_attendees = results[exam_id]["exam_attendees"];

              html+="<tr>";
              html+="<td style='text-align:left; padding: 0.833em 0 0.833em 1.25em;'>" + class_room +  "</td>";
              html+="<td>" + exam_type +  "</td>";
              html+="<td>" + course +  "</td>";
              html+="<td style='text-align:center;'>" + exam_date +  "</td>";
              html+="<td><span style='margin-left:20%;' onmousedown='loadExamStudents(this);' class='label' exam_id= " + exam_id + ">" + exam_attendees +  "</span></td>";
              html+="<td><a class='button round blue image-right ic-add text-upper' onclick='enterExamResult(this)' exam_id=" + exam_id + ">Enter Results</a></td>";
              html+="</tr>";
            }
            tbody.innerHTML = html

          }});
      }
    </script>

    <style>
      #filter td{
        border: none;
      }

      #dropdown-actions{
        background-color: #fff;
        background-image: none;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-shadow: 0 1px 1px rgba(0, 0, 0, 0.075) inset;
        color: #555;
        font-size: 14px;
        height: 34px;
        line-height: 1.42857;
        margin-left: 30%;
        min-width: 108px;
        transition: border-color 0.15s ease-in-out 0s, box-shadow 0.15s ease-in-out 0s;
        margin-left: 0%;
      }

      #dropdown-actions option{
        padding-left: 20px;
      }

      #search-student-form fieldset {
        border: 1px solid gray;
        float: left;
        margin-bottom: 15px;
        padding: 5px;
        width: 98.7%;
      }
      #search-student-form legend {
        color: #abda0f;
        font-size: 14px;
        font-weight: 100;
        margin-left: 14px;
        padding: 2px;

        -moz-border-bottom-colors: none;
        -moz-border-left-colors: none;
        -moz-border-right-colors: none;
        -moz-border-top-colors: none;
        border-color: none;
        border-image: none;
        border-style: none;
        border-width: 0;

        margin-bottom: 0px;
        padding: 0;
        width: auto;


      }
      #search-student-form fieldset input {
        color: #505050;
        float: left;
        margin-right: 5px;
        width: 140px;
        padding: 3px;
        font-size: 14px;
      }

      table th:first-child {
        border-style: none none none !important;
      }

      .modal-title {
        font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
        font-weight: 500;
        line-height: 1.1;
        font-size: 1.2em;
        color: #317eac;
      }
      .label {
        border-radius: 1.5em;
        color: #fff;
        display: inline;
        background-color: #5bc0de;
        font-size: 1.2em;
        font-weight: bold;
        line-height: 1;
        padding-left: 20%;
        padding-right: 20%;
        padding-top:2%;
        padding-bottom:2%;
        text-align: center;
        vertical-align: baseline;
        white-space: nowrap;
        cursor: pointer;
      }

      a{
        cursor: pointer;
      }
    </style>
  </head>
  <body>
    <!-- HEADER -->
    <div id="header-with-tabs">

      <div class="page-full-width cf">

        <ul id="tabs" class="fl">
          <li><a href="/student/examination_results_dashboard" class="dashboard-tab">Dashboard</a></li>
          <li><a href="/examination/index" class="active-tab">Examinations</a></li>
        </ul> <!-- end tabs -->

        <!-- Change this image to your own company's logo -->
        <!-- The logo will automatically be resized to 30px height. -->
        <a href="#" id="company-branding-small" class="fr"><%= image_tag("/admin/school_logo", :alt => 'Logo Missing')%></a>

      </div> <!-- end full-width -->

    </div> <!-- end header -->



    <!-- MAIN CONTENT -->
    <div id="content">

      <div class="page-full-width cf">

        <div class="side-menu fl">

          <h3>Task</h3>
          <ul>
            <li><a href="/examination/assign_exam">Assign Exam</a></li>
            <li><a href="/examination/edit_exam_assignment">Edit Exam Assignment</a></li>
            <li><a href="/examination/void_exam">Void Exam</a></li>
            <li><a href="/examination/capture_exam_results">Capture Exam Results</a></li>
            <li><a href="/examination/edit_exam_results">Edit Exam Results</a></li>
            <li><a href="/examination/void_exam_results">Void Exam Results</a></li>
          </ul>

        </div> <!-- end side-menu -->

        <div class="side-content fr">

          <div class="content-module">

            <div class="half-size-column fl" style="width:69%;">

              <div class="content-module">

                <div class="content-module-heading cf">

                  <h3 class="fl">Capture Exam Results</h3>
                  <span class="fr expand-collapse-text">Click to collapse</span>
                  <span class="fr expand-collapse-text initial-expand">Click to expand</span>

                </div> <!-- end content-module-heading -->


                <div class="content-module-main">
                  <% if flash[:notice] %>
                    <div class="confirmation-box round">
                      <%= flash[:notice] %>
                    </div>
                  <% end %>
                  <% if flash[:error] %>
                    <div class="error-box round">
                      <%= flash[:error] %>
                    </div>
                  <% end %>

                  <form id="search-student-form" action="#">
                    <fieldset>
                      <legend>Filter</legend>
                      <div style="">
                        <table id="filter">
                          <tr>
                            <td style="text-align:right;">Class</td>
                            <td style="">
                              <%= select_tag:class_room, options_for_select(@class_rooms), {
                                :id => "dropdown-actions", :class => "class_room"} %>
                            </td>
                            <td style="text-align:right;">Course</td>
                            <td style="">
                              <%= select_tag:course, options_for_select(@courses), {
                                :id => "dropdown-actions", :class => "course"} %>
                            </td>
                            <td style="text-align:right;">Exam</td>
                            <td>
                              <%= select_tag:exam_type, options_for_select(@exam_types), {
                                :id => "dropdown-actions" , :class => "exam_type"} %>
                            </td>
                            <td>
                              <a onclick="loadSearchResults();" class="button round blue image-right ic-search text-upper">Filter</a>
                            </td>
                          </tr>
                        </table>
                      </div>
                    </fieldset>
                  </form>
                  <table>

                    <thead>

                      <tr>
                        <th>Class</th>
                        <th style="width:20%; text-align:center;">Exam</th>
                        <th style="width:16%; text-align:center;">Course</th>
                        <th style="width:20%; text-align:center;">Exam Date</th>
                        <th>Exam Attendees</th>
                        <th style="min-width:100px;">Action</th>
                      </tr>

                    </thead>

                    <tbody id="exams">
                      <% @exams.each do |exam| %>
                        <tr>
                          <td style="text-align:left; padding: 0.833em 0 0.833em 1.25em;"><%= exam.class_room.name %></td>
                          <td><%=  exam.examination_type.name.titleize %></td>
                          <td><%=  exam.course.name rescue nil %></td>
                          <td style="text-align:center;"><%=  exam.start_date.to_date.strftime("%d/%b/%Y")%></td>
                          <td>
                            <span exam_id="<%= exam.id %>" class="label" onmousedown="loadExamStudents(this);" style="margin-left:20%;">
                              <%=  exam.students.count %>
                            </span>
                          </td>
                          <td>
                            <a exam_id="<%= exam.id %>" onclick="enterExamResult(this)" class="button round blue image-right ic-add text-upper">Enter Results</a>
                          </td>
                        </tr>
                      <% end %>
                    </tbody>

                  </table>
                </div> <!-- end content-module-main -->

              </div> <!-- end content-module -->

            </div>
            <div class="half-size-column fr" style="width:30%">

              <div class="content-module">

                <div class="content-module-heading cf">

                  <h3 class="fl">Exams With Results (<%= @exams_with_results.count %>)</h3>
                  <span class="fr expand-collapse-text">Click to collapse</span>
                  <span class="fr expand-collapse-text initial-expand">Click to expand</span>

                </div> <!-- end content-module-heading -->


                <div class="content-module-main cf">
                  <table>
                    <thead>
                      <tr>
                        <th style="font-weight: bold;">Class</th>
                        <th style="padding: 4px; text-align: center; font-weight: bold;">Course</th>
                        <th style="padding: 4px; text-align: center; font-weight: bold;">Exam Date</th>
                        <th style="font-weight: bold; width:25%;">Results</th>
                      </tr>
                    </thead>
                    <tbody id="exams">
                      <% @exams_with_results.each do |exam| %>
                        <tr>
                          <td><%= exam.class_room.name %></td>
                          <td style="padding:2px;"><%= exam.course.name %></td>
                          <td style="padding:2px;"><%= exam.start_date.to_date.strftime("%d/%b/%Y") %></td>
                          <td style="padding:2px;">
                            <a exam_id="<%= exam.id %>" onmousedown="loadExamResults(this);"class="button round blue image-right ic-right-arrow text-upper">Show</a>
                          </td>
                        </tr>
                      <% end %>
                    </tbody>
                  </table>
                </div> <!-- end content-module-main -->

              </div> <!-- end content-module -->

            </div>

          </div> <!-- end content-module -->




        </div> <!-- end side-content -->

      </div> <!-- end full-width -->

    </div> <!-- end content -->

    <%= javascript_include_tag("bootstrap") %>

    <script>
      function hideCancelButton(){
        if ($("button.cancel")[0]){
          $("button.cancel")[0].style.display='none';
        }
      }
      window.setInterval("hideCancelButton();", 300);
    </script>
  </body>
</html>