<!DOCTYPE html>

<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>ID cards Management</title>
    <!-- Optimize for mobile devices -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>

    <!-- jQuery & JS files -->

    <%= javascript_include_tag("jquery-1.9.1.min") %>
    <%= javascript_include_tag("highcharts") %>
    <%= javascript_include_tag("script") %>

    <%= javascript_include_tag("exporting") %>
    <%= stylesheet_link_tag("style") %>

    <script type="text/javascript">
      function selectStudent(obj){
        studentId = obj.getAttribute("student_id");
        window.location = "/student/view_my_pictures?student_id=" + studentId;
      }
      
      function loadSearchResults(){
        names = document.getElementById('name_search').value.split(/\W+/);
        firstName = names[0];
        lastName = names[1];
        if (typeof lastName == 'undefined'){
          lastName = '';
        }
        console.log(lastName)
        gender = document.getElementsByClassName('gender_search')[0].value;
        jQuery.ajax({
          type: "POST",
          url: "/student/search_students",
          data: "first_name=" + firstName + "&last_name=" + lastName + "&gender=" + gender,
          success: function(results){
            //results = eval("(" + results  + ")");
            html = "";
            tbody = document.getElementById("students");

            for (var student_id in results){
              firstName = results[student_id]["fname"];
              lastName = results[student_id]["lname"];
              gender = results[student_id]["gender"];
              phone = results[student_id]["phone"];
              if (phone == null)phone = "";
              email = results[student_id]["email"];
              dob = results[student_id]["dob"];
              join_date = results[student_id]["join_date"];
              total_photos = results[student_id]["total_photos"];
              
              html+="<tr>";
              html+="<td style='text-align:left; padding: 0.833em 0 0.833em 1.25em;'>" + firstName + ' ' + lastName +  "</td>";
              html+="<td><a href='#'>" + email +  "</a></td>";
              html+="<td>" + gender +  "</td>";
              html+="<td>" + dob +  "</td>";
              html+="<td>" + phone +  "</td>";
              html+="<td>" + join_date +  "</td>";
              html+="<td style='text-align:center;'><span style='margin-left:0%;' class='label'>" + total_photos +  "</span></td>";
              html+="<td><a student_id=" + student_id + " onclick='selectStudent(this)' class='button round blue image-right ic-right-arrow text-upper'>Select</a></td>";
              html+="</tr>";
            }

            tbody.innerHTML = html
          }

        });

      }
    </script>
    <style type="text/css">
      #search-student-form fieldset {
        border: 1px solid gray;
        float: left;
        margin-bottom: 15px;
        padding: 0px;
        width: 98.7%;
      }
      #search-student-form legend {
        color: #abda0f;
        font-size: 14px;
        font-weight: 100;
        margin-left: 14px;
        padding: 2px;
      }

      #search-student-form fieldset input {
        color: #505050;
        float: left;
        margin-right: 5px;
        width: 215px;
        padding: 6px;
        font-size: 14px;
        border: 1px solid #d9dbdd;
        outline: medium none;
      }

      #search-student-form table td{
        border-left: none;
      }

      #dropdown-actions {
        background-color: #fff;
        background-image: none;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-shadow: 0 1px 1px rgba(0, 0, 0, 0.075) inset;
        color: #555;
        font-size: 14px;
        height: 34px;
        line-height: 1.42857;
        margin-left: 0;
        width: 137px;
        padding: 6px 12px;
        transition: border-color 0.15s ease-in-out 0s, box-shadow 0.15s ease-in-out 0s;
      }

      table th:first-child {
        border-style: none none none !important;
      }

      a{
        cursor: pointer;
      }

      .label {
        background-color: #5bc0de;
        border-radius: 1.5em;
        color: #fff;
        cursor: pointer;
        display: inline;
        font-size: 1.2em;
        font-weight: bold;
        line-height: 1;
        padding: 2% 20%;
        text-align: center;
        vertical-align: baseline;
        white-space: nowrap;
      }

    </style>
  </head>
  <body>
    <!-- HEADER -->
    <div id="header-with-tabs">

      <div class="page-full-width cf">

        <ul id="tabs" class="fl">
          <li><a href="/student/id_cards_dashboard" class="dashboard-tab">Dashboard</a></li>
          <li><a href="/student/id_cards_menu" class="active-tab">ID cards</a></li>
        </ul> <!-- end tabs -->

        <!-- Change this image to your own company's logo -->
        <!-- The logo will automatically be resized to 30px height. -->
        <a href="#" id="company-branding-small" class="fr"><%= image_tag("/admin/school_logo", :alt => 'Logo Missing')%></a>

      </div> <!-- end full-width -->

    </div> <!-- end header -->



    <!-- MAIN CONTENT -->
    <div id="content">

      <div class="page-full-width cf">

        <div class="side-menu fl">

          <h3>Task</h3>
          <ul>
            <li><a href="/student/take_picture/">Take student picture</a></li>
            <li><a href="/student/view_student_pictures/">View Student Pictures</a></li>
            <li><a href="/student/generate_id_card/">Generate ID card</a></li>
            <li><a href="/student/print_id_card/">Print ID cards</a></li>
          </ul>

        </div> <!-- end side-menu -->

        <div class="side-content fr">

          <div class="content-module">

            <div class="content-module-heading cf">

              <h3 class="fl">View Pictures</h3>
              <span class="fr expand-collapse-text">Click to collapse</span>
              <span class="fr expand-collapse-text initial-expand">Click to expand</span>

            </div> <!-- end content-module-heading -->


            <div class="content-module-main">
              <% if flash[:notice] %>
                <div class="confirmation-box round">
                  <%= flash[:notice] %>
                </div>
              <% end %>
              <% if flash[:error] %>
                <div class="error-box round">
                  <%= flash[:error] %>
                </div>
              <% end %>
              <form id="search-student-form" action="#">
                <fieldset>
                  <legend>Search</legend>
                  <div style="width:81%; margin-left:10%;">
                    <table>
                      <tr>
                        <td style="width:10%; font-size: 13pt;">Name</td>
                        <td style="width:20%;"><input type="text" id="name_search"/></td>
                        <td style="width:10%; text-align: center; font-size: 13pt;"><span>Gender</span></td>
                        <td style="width:24%">
                          <select id="dropdown-actions" class="gender_search">
                            <option value="">Select Gender</option>
                            <option value="Male">Male</option>
                            <option value="Female">Female</option>
                          </select>
                        </td>
                        <td><a onclick="loadSearchResults();" class="button round blue image-right ic-search text-upper">Search</a></td>
                      </tr>
                    </table>
                  </div>
                </fieldset>
              </form>
              <table>
                <thead>
                  <tr>
                    <th style="min-width:15%;">Name</th>
                    <th>Email</th>
                    <th>Gender</th>
                    <th>Date Of Birth</th>
                    <th>Phone #</th>
                    <th>Date of Join</th>
                    <th style="text-align:center;">Total Photos</th>
                    <th>&nbsp;</th>
                  </tr>
                </thead>
                <tbody id="students">
                  <% @students.each do |student| %>
                    <tr>
                      <td style="text-align:left; padding: 0.833em 0 0.833em 1.25em;"><%= student.fname.capitalize.to_s + ' ' + student.lname.capitalize.to_s %></td>
                      <td><a href="#"><%=  student.email %></a></td>
                      <td><%=  student.gender %></td>
                      <td><%=  student.dob.to_date.strftime("%d-%b-%Y") %></td>
                      <td><%=  student.phone %></td>
                      <td><%=  student.created_at.strftime("%d-%b-%Y") %></td>
                      <td style="text-align:center;">
                        <span style="margin-left:0%;" class="label"><%=  student.student_photos.count %></span>
                      </td>
                      <td>
                        <a student_id="<%= student.id %>" onclick="selectStudent(this)" class="button round blue image-right ic-right-arrow text-upper">Select</a>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div> <!-- end content-module-main -->

          </div> <!-- end content-module -->

          <!-- end content-module -->

        </div> <!-- end side-content -->

      </div> <!-- end full-width -->

    </div> <!-- end content -->

  </body>
</html>