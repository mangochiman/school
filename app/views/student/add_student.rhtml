<!DOCTYPE html>

<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>Student Management</title>
    <!-- Optimize for mobile devices -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>

    <!-- jQuery & JS files -->

    <%= javascript_include_tag("jquery") %>
    <%= javascript_include_tag("jquery-1.9.1.min") %>
    <%= javascript_include_tag("jquery.confirm") %>
    <%= javascript_include_tag("script") %>
    <%= javascript_include_tag("gvalidator") %>
    <%= stylesheet_link_tag("style") %>
    <%= stylesheet_link_tag("metallic") %>
    <%= stylesheet_link_tag("gvalidator") %>
    <%= stylesheet_link_tag("bootstrap") %>
    <script type="text/javascript">
      function selectStudent(obj){
        studentId = obj.getAttribute("student_id");
        window.location = "/student/assign_me_class?student_id=" + studentId;
      }

      function loadSearchResults(){
        names = document.getElementById('name_search').value.split(/\W+/);
        console.log(names)
        firstName = names[0];
        lastName = names[1];
        if (typeof lastName == 'undefined'){
          lastName = '';
        }
        console.log(lastName)
        gender = document.getElementsByClassName('gender_search')[0].value;
        jQuery.ajax({
          type: "POST",
          url: "/student/search_students",
          data: "first_name=" + firstName + "&last_name=" + lastName + "&gender=" + gender,
          success: function(results){
            //results = eval("(" + results  + ")");
            html = "";
            tbody = document.getElementById("students");

            for (var student_id in results){
              firstName = results[student_id]["fname"];
              lastName = results[student_id]["lname"];
              gender = results[student_id]["gender"];
              phone = results[student_id]["phone"];
              email = results[student_id]["email"];
              dob = results[student_id]["dob"];
              current_class = results[student_id]["current_class"];
              if (!current_class){
                current_class = 'Not Assigned'
              }
              join_date = results[student_id]["join_date"];
              html+="<tr>";
              html+="<td style='text-align:left; padding: 0.833em 0 0.833em 1.25em;'>" + firstName + ' ' + lastName +  "</td>";
              html+="<td>" + gender +  "</td>";
              html+="<td>" + current_class +  "</td>";
              html+="<td><a style='line-height:0.9em;' student_id=" + student_id + " onclick='selectStudent(this)' class='button round blue image-right ic-right-arrow text-upper'>Select</a></td>";
              html+="</tr>";
            }

            tbody.innerHTML = html
          }

        });

      }
    </script>

    <style>
      .modal-title {
        font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
        font-weight: 500;
        line-height: 1.1;
        font-size: 1.2em;
        color: red;
      }

      #search-student-form fieldset {
        border: 1px solid gray;
        float: left;
        margin-bottom: 15px;
        padding: 0px;
        float: none;
      }
      #search-student-form legend {
        color: #abda0f;
        font-size: 14px;
        font-weight: 100;
        margin-left: 14px;
        padding: 2px;
        width: initial;
        margin-bottom: initial;
        border-style: none;
      }

      #search-student-form fieldset input {
        color: #505050;
        float: left;
        margin-right: 5px;
        width: 215px;
        padding: 6px;
        font-size: 14px;
        border: 1px solid #d9dbdd;
        outline: medium none;
      }

      #search-student-form table td{
        border-left: none;
      }

      #dropdown-actions {
        background-color: #fff;
        background-image: none;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-shadow: 0 1px 1px rgba(0, 0, 0, 0.075) inset;
        color: #555;
        font-size: 12px !important;
        height: 34px;
        line-height: 1.42857;
        margin-left: 0;
        width: 137px;
        padding: 6px 12px;
        transition: border-color 0.15s ease-in-out 0s, box-shadow 0.15s ease-in-out 0s;
      }

      form.autoform .msg.icon {
        font-size: 10pt;
        margin: 0 10px;
        padding: 5px 5px 5px 30px;
        position: unset;
      }

      form label {
        font-size: 0.9em;
        font-weight: bold;
      }
      form.autoform input, select{
        font-size: 0.8em !important;
        font-weight: bold;
      }

      table label{
        text-align: left;
      }
      #search_results table th:first-child {
        border-style: none none none !important;
      }
      #registration input[type="text"], input[type="password"], textarea {
        border: 1px solid #d9dbdd;
        outline: medium none;
        padding: 0.5em 0.225em;
      }
      input[type="submit"] {
        margin-left: 37%;
      }
      #gender{
        background-color: #fff;
        background-image: none;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-shadow: 0 1px 1px rgba(0, 0, 0, 0.075) inset;
        color: #555;
        font-size: 14px;
        height: 34px;
        line-height: 1.42857;
        width: 205px;
        text-align: center;
        padding: 6px 12px;
        transition: border-color 0.15s ease-in-out 0s, box-shadow 0.15s ease-in-out 0s;
      }

      form.autoform label {
        display: block;
        float: left;
        width: 84px;
      }

      #search_results table th {
        padding: 0;
      }

      a{
        cursor: pointer;
      }
    </style>
  </head>
