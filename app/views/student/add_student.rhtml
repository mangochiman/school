      </div> <!-- end full-width -->

    </div> <!-- end header -->



    <!-- MAIN CONTENT -->
    <div id="content">

      <div class="page-full-width cf">

        <div class="side-menu fl">

          <h3>Task</h3>
          <ul>
            <li><a href="/student/add_student/">Register/Enroll student</a></li>
            <li><a href="/student/edit_student/">Edit Student</a></li>
            <li><a href="/student/remove_students/">Void Student</a></li>
            <li><a href="/student/assign_class/">Assign Class</a></li>
            <li><a href="/student/assign_subjects">Assign Subjects</a></li>
            <li><a href="/student/edit_subjects">Edit Subjects</a></li>
            <li><a href="/student/assign_parent_guardian">Assign Parent/Guardian</a></li>
            <li><a href="/student/edit_parent_guardian">Edit Parent/Guardian</a></li>
            <li><a href="/student/filter_students">Filter Students By</a></li>
          </ul>

        </div> <!-- end side-menu -->




        <div class="side-content fr">

          <div class="content-module">

            <div class="half-size-column fl" style="width:67%;">

              <div class="content-module">

                <div class="content-module-heading cf">

                  <h3 class="fl">Student Registration</h3>
                  <span class="fr expand-collapse-text">Click to collapse</span>
                  <span class="fr expand-collapse-text initial-expand">Click to expand</span>

                </div> <!-- end content-module-heading -->


                <div class="content-module-main">
                  <% if flash[:notice] %>
                    <div class="confirmation-box round">
                      <%= flash[:notice] %>
                    </div>
                  <% end %>
                  <% if flash[:error] %>
                    <div class="error-box round">
                      <%= flash[:error] %>
                    </div>
                  <% end %>
                  <form id="search-student-form" action="#">
                    <fieldset>
                      <legend>Search</legend>
                      <div style="margin-left:2%;">
                        <table>
                          <tr>
                            <td style="width:10%; font-size: 13pt;">Name</td>
                            <td style="width:20%;"><input type="text" id="name_search"/></td>
                            <td style="width:10%; text-align: center; font-size: 13pt;"><span>Gender</span></td>
                            <td style="width:24%">
                              <select id="dropdown-actions" class="gender_search">
                                <option value="">[Select Gender]</option>
                                <option value="Male">Male</option>
                                <option value="Female">Female</option>
                              </select>
                            </td>
                            <td><a onclick="loadSearchResults();" class="button round blue image-right ic-search text-upper">Search</a></td>
                          </tr>
                        </table>
                      </div>
                    </fieldset>
                  </form>

                  <form id="registration" class="autoform" action="/student/create" >
                    <div><label for="firstname">First Name</label><input type="text" name="firstname" class="firstname required" id="firstname" maxlength="30"/></div>
                    <div><label for="lastname">Last Name</label><input type="text" name="lastname" class="lastname required" id="lastname" maxlength="30"/></div>
                    <div><label for="phone">Phone</label><input type="text" name="phone" class="phone required" id="phone" maxlength="12"/></div>
                    <div><label for="email">Email</label><input type="text" name="email" class="email required" id="email" maxlength="60"/></div>

                    <div>
                      <label for="gender">Gender</label>
                      <select id="gender" name="gender" class="select required">
                        <option value="">[select Gender]</option>
                        <option value="Male">Male</option>
                        <option value="Female">Female</option>
                      </select>
                    </div>

                    <div><label for="dob">Date of Birth</label><input type="text" name="dob" id="dob" class="text required date-picker"/></div>

                    <div class="stripe-separator"><!--  --></div>
                    <input type="submit" value="Submit" class="round blue ic-right-arrow" />
                  </form>
                </div> <!-- end content-module-main -->

