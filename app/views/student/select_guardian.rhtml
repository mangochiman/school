      #simple-input{
        font-size: 10pt !important;
      }

    form input[type="text"], input[type="password"], textarea {
        border: 1px solid #d9dbdd;
        outline: medium none;
        padding: 0.5em 0.225em;
    }

    input[type="submit"] {
