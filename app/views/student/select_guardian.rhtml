      #search-student-form fieldset {
        border: 1px solid gray;
        float: left;
        margin-bottom: 15px;
        padding: 5px;
        width: 98.7%;
      }
      #search-student-form legend {
        color: #abda0f;
        font-size: 14px;
        font-weight: 100;
        margin-left: 14px;
        padding: 2px;
      }
      #search-student-form fieldset input {
        color: #505050;
        float: left;
        margin-right: 5px;
        width: 140px;
        padding: 3px;
        font-size: 14px;
      }

      .search_table{
        display: table;
      }

      .search_row{
        display: table-row;
      }

      .search_td{
        display: table-cell;
      }

      table th:first-child {
        border-style: none none none !important;
      }
    .green {
      background-color: #458B00;
      color: white;
    }
    .green:hover{
      background-color: #556B2F;
      color: white;
    }
    </style>
  </head>
  <body>
    <!-- HEADER -->
    <div id="header-with-tabs">

      <div class="page-full-width cf">

        <ul id="tabs" class="fl">
          <li><a href="/student/student_dashboard" class="dashboard-tab">Dashboard</a></li>
          <li><a href="/student/index" class="active-tab"> Students</a></li>
        </ul> <!-- end tabs -->

        <!-- Change this image to your own company's logo -->
        <!-- The logo will automatically be resized to 30px height. -->
        <a href="#" id="company-branding-small" class="fr"><%= image_tag("/admin/school_logo", :alt => 'Logo Missing')%></a>

      </div> <!-- end full-width -->

    </div> <!-- end header -->



    <!-- MAIN CONTENT -->
    <div id="content">

      <div class="page-full-width cf">

        <div class="side-menu fl">

          <h3>Task</h3>
          <ul>
            <li><a href="/student/add_student/">Register/Enroll student</a></li>
            <li><a href="/student/edit_student/">Edit Student</a></li>
            <li><a href="/student/remove_students/">Void Student</a></li>
            <li><a href="/student/assign_class/">Assign Class</a></li>
            <li><a href="/student/assign_subjects">Assign Subjects</a></li>
            <li><a href="/student/edit_subjects">Edit Subjects</a></li>
            <li><a href="/student/assign_parent_guardian">Assign Parent/Guardian</a></li>
            <li><a href="/student/edit_parent_guardian">Edit Parent/Guardian</a></li>
            <li><a href="/student/filter_students">Filter Students By</a></li>
          </ul>

        </div> <!-- end side-menu -->

        <div class="side-content fr">

          <div class="content-module">

            <div class="content-module-heading cf">

              <h3 class="fl">Guardian Assignment</h3>
              <span class="fr expand-collapse-text">Click to collapse</span>
              <span class="fr expand-collapse-text initial-expand">Click to expand</span>

            </div> <!-- end content-module-heading -->


            <div class="content-module-main">
              <% if flash[:notice] %>
                  <div class="confirmation-box round">
                    <%= flash[:notice] %>
                  </div>
                <% end %>
                <% if flash[:error] %>
                  <div class="error-box round">
                      <%= flash[:error] %>
                  </div>
                <% end %>
              <form id="search-student-form" action="#">
                <fieldset>
                  <legend>Search</legend>
                  <div style="width:91%; margin-left:5%;">
                    <table>
                      <tr>
                        <td style="width:10%;">First Name</td>
                        <td style="width:10%;"><input type="text" id="fname_search"/></td>
                        <td style="width:10%;">Last Name</td>
                        <td style="width:10%;"><input type="text" id="lname_search"/></td>
                        <td style="width:10%;">Gender</td>
                        <td style="width:5%">
                          <select id="dropdown-actions" class="gender_search">
                            <option value="">Select Gender</option>
                            <option value="Male">Male</option>
                            <option value="Female">Female</option>
                          </select>
                        </td>
                        <td><a onclick="newGuardian();" href="#" class="button round green image-right ic-add text-upper">New Guardian</a></td>
                      </tr>
                      <tr>                        
                        <td colspan="7"><a onclick="loadSearchResults();" href="#" class="button round blue image-right ic-search text-upper">Search</a></td>
                      </tr>
                    </table>
                  </div>
                </fieldset>
              </form>

              <table>

                <thead>

                  <tr>
                    <th style="min-width:15%;">Name</th>
                    <th>Email</th>
                    <th>Gender</th>
                    <th>Date Of Birth</th>
                    <th>Phone #</th>
                    <th>Date of Join</th>
                    <th style="min-width:16%;">Action</th>
                  </tr>

                </thead>

                <tbody id="parents">
                  <% @parents.each do |parent| %>
                  <tr>
                    <td style="text-align:left; padding: 0.833em 0 0.833em 1.25em;"><%= parent.fname.capitalize.to_s + ' ' + parent.lname.capitalize.to_s %></td>
                    <td><a href="#"><%=  parent.email %></a></td>
                    <td><%=  parent.gender %></td>
                    <td><%=  parent.dob.to_date.strftime("%d-%b-%Y") %></td>
                    <td><%=  parent.phone %></td>
                    <td><%=  parent.created_at.strftime("%d-%b-%Y") %></td>
                    <td>
                      <a parent_id="<%= parent.id %>" onclick="selectGuardian(this)" href="#" class="button round blue image-right text-upper ic-right-arrow">Select Guardian</a>
                    </td>
                  </tr>
                  <% end %>
                </tbody>

              </table>
            </div> <!-- end content-module-main -->

          </div> <!-- end content-module -->

        </div> <!-- end side-content -->

      </div> <!-- end full-width -->

    </div> <!-- end content -->

  </body>
</html>