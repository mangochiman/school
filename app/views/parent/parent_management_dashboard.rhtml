    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>

    <!-- jQuery & JS files -->
    <%= javascript_include_tag("jquery-1.9.1.min") %>
    <%= javascript_include_tag("highcharts") %>
    <%= javascript_include_tag("script") %>

    <%= javascript_include_tag("exporting") %>
    <%= stylesheet_link_tag("style") %>
    <script type="text/javascript">
      var males = parseInt('<%= @males %>');
      var females = parseInt('<%= @females %>');
      $(function () {
        $('#container').highcharts({
          chart: {
            plotBackgroundColor: null,
            plotBorderWidth: null,
            plotShadow: false
          },
          title: {
            text: 'Students Enrollment By Gender'
          },
          subtitle: {
            text: '<%= Date.today.year %>'
          },
          tooltip: {
            pointFormat: '{series.name}: <b>{point.percentage}%</b>',
            percentageDecimals: 1
          },
          plotOptions: {
            pie: {
              allowPointSelect: true,
              cursor: 'pointer',
              dataLabels: {
                enabled: true,
                color: '#000000',
                connectorColor: '#000000',
                formatter: function() {
                  return '<b>'+ this.point.name +'</b>: '+ this.percentage +' %';
                }
              }
            }
          },
          series: [{
              type: 'pie',
              name: 'Total',
              data: [
                ['Males',   males],
                {
                  name: 'Females',
                  y: females,
                  sliced: true,
                  selected: true
                }
              ]
            }]
        });
      });

      function plotGraph(){
        year = document.getElementById('year').value;
        jQuery.ajax({
          type: "POST",
          url: "/admin/load_enrollment_by_gender_data",
          data: "year=" + year,
          success: function(results){
            results = eval('(' + results + ')')
            year = results['year'];
            totalMales = results['males'];
            totalFemales = results['females'];

            $('#container').highcharts({
              chart: {
                plotBackgroundColor: null,
                plotBorderWidth: null,
                plotShadow: false
              },
              title: {
                text: 'Students Enrollment By Gender'
              },
              subtitle: {
                text: year
              },
              tooltip: {
                pointFormat: '{series.name}: <b>{point.percentage}%</b>',
                percentageDecimals: 1
              },
              plotOptions: {
                pie: {
                  allowPointSelect: true,
                  cursor: 'pointer',
                  dataLabels: {
                    enabled: true,
                    color: '#000000',
                    connectorColor: '#000000',
                    formatter: function() {
                      return '<b>'+ this.point.name +'</b>: '+ this.percentage +' %';
                    }
                  }
                }
              },
              series: [{
                  type: 'pie',
                  name: 'Total',
                  data: [
                    ['Males',   totalMales],
                    {
                      name: 'Females',
                      y: totalFemales,
                      sliced: true,
                      selected: true
                    }
                  ]
                }]
            });
          }

        });
      }
    </script>

    <style>
      #filter-graph-form fieldset {
