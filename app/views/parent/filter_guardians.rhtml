<!DOCTYPE html>

<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>SimpleAdmin - Dashboard</title>
    <!-- Optimize for mobile devices -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>

    <!-- jQuery & JS files -->
    <%= javascript_include_tag("jquery-1.9.1.min") %>
    <%= javascript_include_tag("script") %>
    <%= stylesheet_link_tag("style") %>

    <script>
      function editMe(obj){
        parentId = obj.getAttribute("teacher_id");
        window.location = "/parent/edit_me?parent_id=" + parentId;
      }
      
      function searchGuardians(){
        classRoom = document.getElementById("class_room").value;
        gender = document.getElementById("gender").value;
        jQuery.ajax({
          type: "POST",
          url: "/parent/filter_guardians",
          data: "class_room=" + classRoom + "&gender=" + gender,
          success: function(results){
            results = eval("(" + results  + ")");
            html = "";
            tbody = document.getElementById("parents");

            for (var parentId in results){
              firstName = results[parentId]["fname"];
              lastName = results[parentId]["lname"];
              gender = results[parentId]["gender"];
              phone = results[parentId]["phone"];
              email = results[parentId]["email"];
              dob = results[parentId]["dob"];
              join_date = results[parentId]["join_date"];
              html+="<tr>";
              html+="<td style='text-align:left; padding: 0.833em 0 0.833em 1.25em;'>" + firstName + ' ' + lastName +  "</td>";
              html+="<td><a href='#'>" + email +  "</a></td>";
              html+="<td>" + gender +  "</td>";
              html+="<td>" + dob +  "</td>";
              html+="<td>" + phone +  "</td>";
              html+="<td>" + join_date +  "</td>";
              html+="<td><a parent_id=" + parentId + " onclick='editMe(this)' href='#' class='table-actions-button ic-table-edit'></a></td>";
              html+="</tr>";
            }

            tbody.innerHTML = html
          }

      });
      }

    </script>
    <style>
      #filter-form fieldset {
        border: 1px solid gray;
        padding: 0px;
        width: 98.7%;
      }
      #filter-form legend {
        color: #abda0f;
        font-size: 14px;
        font-weight: 100;
        margin-left: 14px;
        padding: 2px;
      }
      #filter-form fieldset input {
        color: #505050;
        float: left;
        margin-right: 5px;
        width: 140px;
        padding: 3px;
        font-size: 14px;
      }

     #class_room, #gender{
        background-color: #fff;
        background-image: none;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-shadow: 0 1px 1px rgba(0, 0, 0, 0.075) inset;
        color: #555;
        display: block;
        font-size: 14px;
        height: 34px;
        line-height: 1.42857;
        padding: 6px 12px;
        min-width: 167px;
        transition: border-color 0.15s ease-in-out 0s, box-shadow 0.15s ease-in-out 0s;
      }

      a{
        cursor: pointer;
      }
    table th:first-child {
        border-style: none none none !important;
    }
    </style>
  </head>
  <body>

