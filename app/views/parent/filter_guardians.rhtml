<!DOCTYPE html>

<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>SimpleAdmin - Dashboard</title>
    <!-- Optimize for mobile devices -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>

    <!-- jQuery & JS files -->
    <%= javascript_include_tag("jquery-1.9.1.min") %>
    <%= javascript_include_tag("script") %>
    <%= stylesheet_link_tag("style") %>

    <script>
      function editMe(obj){
        parentId = obj.getAttribute("teacher_id");
        window.location = "/parent/edit_me?parent_id=" + parentId;
      }
      
      function searchGuardians(){
        classRoom = document.getElementById("class_room").value;
        gender = document.getElementById("gender").value;
        jQuery.ajax({
          type: "POST",
          url: "/parent/filter_guardians",
          data: "class_room=" + classRoom + "&gender=" + gender,
          success: function(results){
            results = eval("(" + results  + ")");
            html = "";
            tbody = document.getElementById("parents");

            for (var parentId in results){
              firstName = results[parentId]["fname"];
              lastName = results[parentId]["lname"];
              gender = results[parentId]["gender"];
              phone = results[parentId]["phone"];
              email = results[parentId]["email"];
              dob = results[parentId]["dob"];
              join_date = results[parentId]["join_date"];
              html+="<tr>";
              html+="<td style='text-align:left; padding: 0.833em 0 0.833em 1.25em;'>" + firstName + ' ' + lastName +  "</td>";
              html+="<td><a href='#'>" + email +  "</a></td>";
              html+="<td>" + gender +  "</td>";
              html+="<td>" + dob +  "</td>";
              html+="<td>" + phone +  "</td>";
              html+="<td>" + join_date +  "</td>";
              html+="<td><a parent_id=" + parentId + " onclick='editMe(this)' href='#' class='table-actions-button ic-table-edit'></a></td>";
              html+="</tr>";
            }

            tbody.innerHTML = html
          }

      });
      }

    </script>
    <style>
      #filter-form fieldset {
        border: 1px solid gray;
        padding: 0px;
        width: 98.7%;
      }
      #filter-form legend {
        color: #abda0f;
        font-size: 14px;
        font-weight: 100;
        margin-left: 14px;
        padding: 2px;
      }
      #filter-form fieldset input {
        color: #505050;
        float: left;
        margin-right: 5px;
        width: 140px;
        padding: 3px;
        font-size: 14px;
      }

     #class_room, #gender{
        background-color: #fff;
        background-image: none;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-shadow: 0 1px 1px rgba(0, 0, 0, 0.075) inset;
        color: #555;
        display: block;
        font-size: 14px;
        height: 34px;
        line-height: 1.42857;
        padding: 6px 12px;
        min-width: 167px;
        transition: border-color 0.15s ease-in-out 0s, box-shadow 0.15s ease-in-out 0s;
      }

      a{
        cursor: pointer;
      }
    table th:first-child {
        border-style: none none none !important;
    }
    </style>
  </head>
  <body>  
    <!-- HEADER -->
    <div id="header-with-tabs">

      <div class="page-full-width cf">

        <ul id="tabs" class="fl">
          <li><a href="/parent/parent_management_dashboard" class="dashboard-tab">Dashboard</a></li>
          <li><a href="/parent/parents_menu" class="active-tab">Parents</a></li>
        </ul> <!-- end tabs -->

        <!-- Change this image to your own company's logo -->
        <!-- The logo will automatically be resized to 30px height. -->
        <a href="#" id="company-branding-small" class="fr"><%= image_tag("/admin/school_logo", :alt => 'Logo Missing')%></a>

      </div> <!-- end full-width -->

    </div> <!-- end header -->



    <!-- MAIN CONTENT -->
    <div id="content">

      <div class="page-full-width cf">

        <div class="side-menu fl">

          <h3>Task</h3>
          <ul>
            <li><a href="/parent/new_parent_guardian">New Guardian</a></li>
            <li><a href="/parent/edit_parent_guardian">Edit Guardian</a></li>
            <li><a href="/parent/void_parent_guardian">Void Guardian</a></li>
            <li><a href="/parent/filter_guardians">Filter Guardians By</a></li>
          </ul>

        </div> <!-- end side-menu -->

        <div class="side-content fr">

          <div class="content-module">

            <div class="content-module-heading cf">

              <h3 class="fl">Table design</h3>
              <span class="fr expand-collapse-text">Click to collapse</span>
              <span class="fr expand-collapse-text initial-expand">Click to expand</span>

            </div> <!-- end content-module-heading -->


            <div class="content-module-main">
              <form id="filter-form" action="#">
                <fieldset>
                  <legend>Search</legend>
                  <div style="margin-left:2%;">
                    <table>
                      <tr>
                        <td style="width:5.5em; text-align: left;"><span>Select Class</span></td>
                        <td><%= select_tag("class_room", options_for_select(@class_rooms), {:onchange=>"loadClassCourses(this);"})%></td>

                        <td style="text-align: left;"><span>Select Gender</span></td>
                        <td><%= select_tag("gender", options_for_select(['All', 'Male', 'Female']))%></td>
                        <td><a onclick="searchGuardians();" class="button round blue image-right ic-search text-upper">Filter</a></td>

                      </tr>
                    </table>
                  </div>
                </fieldset>
              </form><br />
              <table>

                <thead>

                  <tr>
                    <th style="min-width:15%;">Name</th>
                    <th>Email</th>
                    <th>Gender</th>
                    <th>Date Of Birth</th>
                    <th>Phone #</th>
                    <th>Date of Join</th>
                    <th>Action</th>
                  </tr>

                </thead>

                <tbody id="parents">
                  <% @parents.each do |teacher| %>
                  <tr>
                    <td style="text-align:left; padding: 0.833em 0 0.833em 1.25em;"><%= teacher.fname.capitalize.to_s + ' ' + teacher.lname.capitalize.to_s %></td>
                    <td><a href="#"><%=  teacher.email %></a></td>
                    <td><%=  teacher.gender %></td>
                    <td><%=  teacher.dob.to_date.strftime("%d-%b-%Y") %></td>
                    <td><%=  teacher.phone %></td>
                    <td><%=  teacher.created_at.strftime("%d-%b-%Y") %></td>
                    <td>
                      <a teacher_id="<%= teacher.id %>" onclick="editMe(this)" class="table-actions-button ic-table-edit"></a>
                    </td>
                  </tr>
                  <% end %>
                </tbody>

              </table>
            </div> <!-- end content-module-main -->

          </div> <!-- end content-module -->

        </div> <!-- end side-content -->

      </div> <!-- end full-width -->

    </div> <!-- end content -->

  </body>
</html>